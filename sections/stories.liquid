<section class="stories" data-section-id="{{ section.id }}">
  <div class="container">
    <!-- Section Header -->
    <div class="stories__header">
      <div class="section-divider">
        <div class="section-divider__line section-divider__line--short"></div>
        <span class="section-divider__text">{{ section.settings.section_number | default: '02' }}</span>
        <div class="section-divider__line section-divider__line--long"></div>
      </div>
      
      <h2 class="stories__title">
        {{ section.settings.heading | default: 'STORIES' }}
      </h2>
      
      <div class="section-divider">
        <div class="section-divider__line section-divider__line--long"></div>
        <span class="section-divider__text">{{ section.blocks.size }}</span>
        <div class="section-divider__line section-divider__line--short"></div>
      </div>
    </div>

    <!-- Stories -->
    <div class="stories__list">
      {%- for block in section.blocks -%}
        <article class="story {% if forloop.index is even %}story--reverse{% endif %}" {{ block.shopify_attributes }}>
          <div class="story__grid">
            <!-- Image Section -->
            <div class="story__media {% if forloop.index is even %}story__media--right{% endif %}">
              {%- if block.settings.image != blank -%}
                <img 
                  src="{{ block.settings.image | image_url: width: 1200 }}"
                  alt="{{ block.settings.image.alt | escape | default: block.settings.title }}"
                  loading="{% if forloop.first %}eager{% else %}lazy{% endif %}"
                  class="story__image"
                  width="1200"
                  height="900"
                >
              {%- else -%}
                {{ 'lifestyle-1' | placeholder_svg_tag: 'story__placeholder' }}
              {%- endif -%}
              
              <div class="story__badge">
                <span>{{ block.settings.type | default: 'ARTICLE' }}</span>
              </div>
            </div>
            
            <!-- Content Section -->
            <div class="story__content {% if forloop.index is even %}story__content--left{% endif %}">
              <div class="story__meta">
                <span>{{ block.settings.date | default: '2026' }}</span>
              </div>
              
              <h3 class="story__heading">
                {{ block.settings.title | default: 'Story Title' }}
              </h3>
              
              <p class="story__excerpt">
                {{ block.settings.excerpt | default: 'Brief description of the story goes here.' }}
              </p>
              
              {%- if block.settings.link != blank -%}
                <a href="{{ block.settings.link }}" class="story__link">
                  <span>{{ block.settings.link_text | default: 'Learn More' }}</span>
                  <span class="story__link-arrow">â†’</span>
                </a>
              {%- endif -%}
            </div>
          </div>
        </article>
      {%- endfor -%}
    </div>
  </div>
</section>

{% style %}
  .stories {
    padding: 6rem 0;
    background: #fff;
    border-top: 1px solid rgba(0, 0, 0, 0.05);
  }

  .stories__header {
    margin-bottom: 5rem;
  }

  .stories__title {
    text-align: center;
    font-size: 1.875rem;
    font-family: 'Space Grotesk', monospace;
    font-weight: 300;
    color: #000;
    letter-spacing: 0.1em;
    line-height: 1;
    padding: 2rem 0;
  }

  @media (min-width: 768px) {
    .stories__title {
      font-size: 2.25rem;
    }
  }

  .stories__list {
    display: flex;
    flex-direction: column;
    gap: 4rem;
  }

  .story__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 0;
    border: 1px solid rgba(0, 0, 0, 0.1);
    transition: border-color 0.3s ease;
  }

  .story__grid:hover {
    border-color: rgba(0, 0, 0, 0.3);
  }

  @media (min-width: 1024px) {
    .story__grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  /* Media */
  .story__media {
    position: relative;
    aspect-ratio: 4 / 3;
    overflow: hidden;
    background: #f3f4f6;
  }

  @media (min-width: 1024px) {
    .story__media {
      aspect-ratio: 1;
    }

    .story--reverse .story__media {
      order: 2;
    }
  }

  .story__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.7s ease;
  }

  .story:hover .story__image {
    transform: scale(1.1);
  }

  .story__placeholder {
    width: 100%;
    height: 100%;
    background: #e5e7eb;
  }

  .story__badge {
    position: absolute;
    top: 1.5rem;
    left: 1.5rem;
    padding: 0.5rem 1rem;
    background: #000;
    color: #fff;
  }

  .story__badge span {
    font-size: 0.75rem;
    font-family: 'Space Grotesk', monospace;
    font-weight: 300;
    letter-spacing: 0.05em;
    text-transform: uppercase;
  }

  /* Content */
  .story__content {
    padding: 3rem;
    display: flex;
    flex-direction: column;
    justify-content: center;
    background: #fff;
    border-top: 1px solid rgba(0, 0, 0, 0.1);
  }

  @media (min-width: 1024px) {
    .story__content {
      padding: 4rem;
      border-top: none;
      border-left: 1px solid rgba(0, 0, 0, 0.1);
    }

    .story--reverse .story__content {
      order: 1;
      border-left: none;
      border-right: 1px solid rgba(0, 0, 0, 0.1);
    }
  }

  .story__meta {
    margin-bottom: 1rem;
  }

  .story__meta span {
    font-size: 0.75rem;
    font-family: 'Space Grotesk', monospace;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    color: rgba(0, 0, 0, 0.3);
  }

  .story__heading {
    font-size: 1.875rem;
    font-family: 'Space Grotesk', monospace;
    font-weight: 300;
    color: #000;
    letter-spacing: 0.05em;
    line-height: 1.2;
    margin-bottom: 1.5rem;
  }

  @media (min-width: 768px) {
    .story__heading {
      font-size: 2.25rem;
    }
  }

  .story__excerpt {
    font-size: 1rem;
    color: rgba(0, 0, 0, 0.5);
    line-height: 1.7;
    font-weight: 300;
    margin-bottom: 2rem;
  }

  .story__link {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    font-size: 0.875rem;
    font-family: 'Space Grotesk', monospace;
    color: rgba(0, 0, 0, 0.6);
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .story__link:hover {
    color: #000;
  }

  .story__link span {
    letter-spacing: 0.05em;
  }

  .story__link-arrow {
    color: rgba(0, 0, 0, 0.2);
    transition: color 0.3s ease;
  }

  .story__link:hover .story__link-arrow {
    color: rgba(0, 0, 0, 0.4);
  }
{% endstyle %}

