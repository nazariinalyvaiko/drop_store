        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Feature Title"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Description"
        },
        {
          "type": "text",
          "id": "link_label",
          "label": "Link Label"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Features Grid",
      "blocks": [
        { "type": "feature", "settings": { "icon_type": "truck", "title": "Free Shipping", "text": "On orders over $50" } },
        { "type": "feature", "settings": { "icon_type": "shield", "title": "Secure Payment", "text": "100% protected" } },
