{%- comment -%}
  Features Grid - Icon-based feature blocks with full customization
{%- endcomment -%}

<section class="features-grid" data-section-id="{{ section.id }}" style="
  --features-bg: {{ section.settings.bg_color }};
  --features-text: {{ section.settings.text_color }};
  --features-muted: {{ section.settings.muted_color }};
  --features-accent: {{ section.settings.accent_color }};
  --features-card-bg: {{ section.settings.card_bg }};
">
  <div class="container">
    {%- if section.settings.heading != blank or section.settings.subtitle != blank -%}
      <div class="features-grid__header" style="text-align: {{ section.settings.header_align }};">
        {%- if section.settings.label != blank -%}
          <span class="features-grid__label">{{ section.settings.label }}</span>
        {%- endif -%}
        {%- if section.settings.heading != blank -%}
          <h2 class="features-grid__title" style="font-size: {{ section.settings.heading_size }}rem; font-weight: {{ section.settings.heading_weight }};">
            {{ section.settings.heading }}
          </h2>
        {%- endif -%}
        {%- if section.settings.subtitle != blank -%}
          <p class="features-grid__subtitle">{{ section.settings.subtitle }}</p>
        {%- endif -%}
      </div>
    {%- endif -%}

    <div class="features-grid__grid features-grid__grid--{{ section.settings.columns }}">
      {%- for block in section.blocks -%}
        <div class="feature-card {% if section.settings.card_style == 'bordered' %}feature-card--bordered{% elsif section.settings.card_style == 'filled' %}feature-card--filled{% endif %}" {{ block.shopify_attributes }} style="text-align: {{ section.settings.card_align }};">
          {%- if block.settings.image != blank -%}
            <div class="feature-card__image">
              <img 
                src="{{ block.settings.image | image_url: width: 120 }}"
                alt="{{ block.settings.image.alt | escape }}"
                loading="lazy"
                width="120"
                height="120"
              >
            </div>
          {%- elsif block.settings.icon != blank -%}
            <div class="feature-card__icon" style="font-size: {{ section.settings.icon_size }}rem;">
              {{ block.settings.icon }}
            </div>
          {%- else -%}
            <div class="feature-card__icon-svg">
              {%- case block.settings.icon_type -%}
                {%- when 'star' -%}
                  <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/></svg>
                {%- when 'truck' -%}
                  <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><rect x="1" y="3" width="15" height="13"></rect><polygon points="16 8 20 8 23 11 23 16 16 16 16 8"></polygon><circle cx="5.5" cy="18.5" r="2.5"></circle><circle cx="18.5" cy="18.5" r="2.5"></circle></svg>
                {%- when 'shield' -%}
                  <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/></svg>
                {%- when 'heart' -%}
                  <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"/></svg>
                {%- when 'clock' -%}
                  <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><circle cx="12" cy="12" r="10"></circle><polyline points="12 6 12 12 16 14"></polyline></svg>
                {%- when 'gift' -%}
                  <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><polyline points="20 12 20 22 4 22 4 12"></polyline><rect x="2" y="7" width="20" height="5"></rect><line x1="12" y1="22" x2="12" y2="7"></line><path d="M12 7H7.5a2.5 2.5 0 0 1 0-5C11 2 12 7 12 7z"></path><path d="M12 7h4.5a2.5 2.5 0 0 0 0-5C13 2 12 7 12 7z"></path></svg>
                {%- when 'check' -%}
                  <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/><polyline points="22 4 12 14.01 9 11.01"/></svg>
                {%- when 'zap' -%}
                  <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><polygon points="13 2 3 14 12 14 11 22 21 10 12 10 13 2"></polygon></svg>
                {%- else -%}
                  <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><circle cx="12" cy="12" r="10"/></svg>
              {%- endcase -%}
            </div>
          {%- endif -%}

          <h3 class="feature-card__title" style="font-size: {{ section.settings.title_size }}rem;">
            {{ block.settings.title }}
          </h3>

          {%- if block.settings.text != blank -%}
            <p class="feature-card__text">{{ block.settings.text }}</p>
          {%- endif -%}

          {%- if block.settings.link_label != blank -%}
            <a href="{{ block.settings.link }}" class="feature-card__link">
              {{ block.settings.link_label }} â†’
            </a>
          {%- endif -%}
        </div>
      {%- endfor -%}
    </div>
  </div>
</section>

{% style %}
  .features-grid {
    padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px;
    background: var(--features-bg);
    color: var(--features-text);
  }

  .features-grid__header {
    margin-bottom: 3rem;
    max-width: 40rem;
    {%- if section.settings.header_align == 'center' -%}
    margin-left: auto;
    margin-right: auto;
    {%- endif -%}
  }

  .features-grid__label {
    display: inline-block;
    font-size: 0.625rem;
    font-family: 'Space Grotesk', monospace;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    color: var(--features-accent);
    margin-bottom: 0.75rem;
  }

  .features-grid__title {
    font-family: 'Space Grotesk', monospace;
    line-height: 1.2;
    margin-bottom: 0.75rem;
  }

  .features-grid__subtitle {
    font-size: 1rem;
    color: var(--features-muted);
    line-height: 1.6;
  }

  .features-grid__grid {
    display: grid;
    gap: {{ section.settings.gap }}rem;
  }

  .features-grid__grid--2 { grid-template-columns: repeat(2, 1fr); }
  .features-grid__grid--3 { grid-template-columns: repeat(3, 1fr); }
  .features-grid__grid--4 { grid-template-columns: repeat(4, 1fr); }
  .features-grid__grid--5 { grid-template-columns: repeat(5, 1fr); }
  .features-grid__grid--6 { grid-template-columns: repeat(6, 1fr); }

  @media (max-width: 1024px) {
    .features-grid__grid--5,
    .features-grid__grid--6 { grid-template-columns: repeat(3, 1fr); }
  }

  @media (max-width: 768px) {
    .features-grid__grid--3,
    .features-grid__grid--4,
    .features-grid__grid--5,
    .features-grid__grid--6 { grid-template-columns: repeat(2, 1fr); }
  }

  @media (max-width: 480px) {
    .features-grid__grid--2,
    .features-grid__grid--3,
    .features-grid__grid--4,
    .features-grid__grid--5,
    .features-grid__grid--6 { grid-template-columns: 1fr; }
  }

  .feature-card {
    padding: {{ section.settings.card_padding }}rem;
    transition: all 0.3s ease;
  }

  .feature-card--bordered {
    border: 1px solid rgba(128, 128, 128, 0.15);
    border-radius: {{ section.settings.border_radius }}px;
  }

  .feature-card--bordered:hover {
    border-color: var(--features-accent);
  }

  .feature-card--filled {
    background: var(--features-card-bg);
    border-radius: {{ section.settings.border_radius }}px;
  }

  .feature-card__image {
    width: {{ section.settings.icon_size }}rem;
    height: {{ section.settings.icon_size }}rem;
    margin-bottom: 1rem;
    {%- if section.settings.card_align == 'center' -%}
    margin-left: auto;
    margin-right: auto;
    {%- endif -%}
  }

  .feature-card__image img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .feature-card__icon {
    margin-bottom: 1rem;
  }

  .feature-card__icon-svg {
    width: {{ section.settings.icon_size }}rem;
    height: {{ section.settings.icon_size }}rem;
    margin-bottom: 1rem;
    color: var(--features-accent);
    {%- if section.settings.card_align == 'center' -%}
    margin-left: auto;
    margin-right: auto;
    {%- endif -%}
  }

  .feature-card__icon-svg svg {
    width: 100%;
    height: 100%;
  }

  .feature-card__title {
    font-family: 'Space Grotesk', monospace;
    font-weight: 400;
    margin-bottom: 0.5rem;
    color: var(--features-text);
  }

  .feature-card__text {
    font-size: 0.875rem;
    color: var(--features-muted);
    line-height: 1.6;
  }

  .feature-card__link {
    display: inline-block;
    margin-top: 0.75rem;
    font-size: 0.75rem;
    font-family: 'Space Grotesk', monospace;
    letter-spacing: 0.05em;
    color: var(--features-accent);
    text-decoration: none;
    transition: opacity 0.3s;
  }

  .feature-card__link:hover {
    opacity: 0.7;
  }
{% endstyle %}

{% schema %}
{
  "name": "Features Grid",
  "tag": "section",
  "class": "section-features-grid",
  "settings": [
    {
      "type": "header",
      "content": "Header"
    },
    {
      "type": "text",
      "id": "label",
      "label": "Label"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Why Choose Us"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Subtitle"
    },
    {
      "type": "range",
      "id": "heading_size",
      "label": "Heading Size",
      "min": 1.25, "max": 3, "step": 0.25, "default": 1.75, "unit": "rem"
    },
    {
      "type": "select",
      "id": "heading_weight",
      "label": "Heading Weight",
      "options": [
        { "value": "300", "label": "Light" },
        { "value": "400", "label": "Regular" },
        { "value": "500", "label": "Medium" }
      ],
      "default": "300"
    },
    {
      "type": "select",
      "id": "header_align",
      "label": "Header Alignment",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" }
      ],
      "default": "center"
    },
    {
      "type": "header",
      "content": "Grid"
    },
    {
      "type": "select",
      "id": "columns",
      "label": "Columns",
      "options": [
        { "value": "2", "label": "2" },
        { "value": "3", "label": "3" },
        { "value": "4", "label": "4" },
        { "value": "5", "label": "5" },
        { "value": "6", "label": "6" }
      ],
      "default": "4"
    },
    {
      "type": "range",
      "id": "gap",
      "label": "Gap",
      "min": 1, "max": 4, "step": 0.5, "default": 1.5, "unit": "rem"
    },
    {
      "type": "header",
      "content": "Cards"
    },
    {
      "type": "select",
      "id": "card_style",
      "label": "Card Style",
      "options": [
        { "value": "none", "label": "None" },
        { "value": "bordered", "label": "Bordered" },
        { "value": "filled", "label": "Filled" }
      ],
      "default": "none"
    },
    {
      "type": "select",
      "id": "card_align",
      "label": "Card Alignment",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" }
      ],
      "default": "center"
    },
    {
      "type": "range",
      "id": "card_padding",
      "label": "Card Padding",
      "min": 1, "max": 3, "step": 0.25, "default": 1.5, "unit": "rem"
    },
    {
      "type": "range",
      "id": "icon_size",
      "label": "Icon Size",
      "min": 1.5, "max": 4, "step": 0.25, "default": 2.5, "unit": "rem"
    },
    {
      "type": "range",
      "id": "title_size",
      "label": "Title Size",
      "min": 0.875, "max": 1.5, "step": 0.0625, "default": 1, "unit": "rem"
    },
    {
      "type": "range",
      "id": "border_radius",
      "label": "Border Radius",
      "min": 0, "max": 24, "step": 4, "default": 8, "unit": "px"
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "muted_color",
      "label": "Muted Color",
      "default": "#666666"
    },
    {
      "type": "color",
      "id": "accent_color",
      "label": "Accent Color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "card_bg",
      "label": "Card Background (filled)",
      "default": "#f5f5f5"
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding Top",
      "min": 0, "max": 120, "step": 10, "default": 60, "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding Bottom",
      "min": 0, "max": 120, "step": 10, "default": 60, "unit": "px"
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Custom Image"
        },
        {
          "type": "text",
          "id": "icon",
          "label": "Icon (emoji)"
        },
        {
          "type": "select",
          "id": "icon_type",
          "label": "Icon (SVG)",
          "options": [
            { "value": "star", "label": "Star" },
            { "value": "truck", "label": "Truck" },
            { "value": "shield", "label": "Shield" },
            { "value": "heart", "label": "Heart" },
            { "value": "clock", "label": "Clock" },
            { "value": "gift", "label": "Gift" },
            { "value": "check", "label": "Check" },
            { "value": "zap", "label": "Lightning" },
            { "value": "circle", "label": "Circle" }
