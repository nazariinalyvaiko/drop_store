{%- comment -%}
  Text Columns - Multi-column text/features block
{%- endcomment -%}

<section class="text-columns" data-section-id="{{ section.id }}">
  <div class="container">
    {%- if section.settings.heading != blank -%}
      <div class="text-columns__header">
        <h2 class="text-columns__title">{{ section.settings.heading }}</h2>
      </div>
    {%- endif -%}

    <div class="text-columns__grid text-columns__grid--{{ section.settings.columns }}">
      {%- for block in section.blocks -%}
        <div class="text-column" {{ block.shopify_attributes }}>
          {%- if block.settings.icon != blank -%}
            <div class="text-column__icon">{{ block.settings.icon }}</div>
          {%- endif -%}
          <h3 class="text-column__heading">{{ block.settings.heading }}</h3>
          <p class="text-column__text">{{ block.settings.text }}</p>
          {%- if block.settings.link_label != blank -%}
            <a href="{{ block.settings.link }}" class="text-column__link">
              {{ block.settings.link_label }} â†’
            </a>
          {%- endif -%}
        </div>
      {%- endfor -%}
    </div>
  </div>
</section>

{% style %}
  .text-columns {
    padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px;
    background: {{ section.settings.bg_color }};
  }

  .text-columns__header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .text-columns__title {
    font-size: 1.5rem;
    font-family: 'Space Grotesk', monospace;
    font-weight: 300;
    letter-spacing: 0.1em;
  }

  .text-columns__grid {
    display: grid;
    gap: 2rem;
  }

  .text-columns__grid--2 { grid-template-columns: repeat(2, 1fr); }
  .text-columns__grid--3 { grid-template-columns: repeat(3, 1fr); }
  .text-columns__grid--4 { grid-template-columns: repeat(4, 1fr); }

  @media (max-width: 768px) {
    .text-columns__grid--2,
    .text-columns__grid--3,
    .text-columns__grid--4 {
      grid-template-columns: 1fr;
    }
  }

  .text-column {
    text-align: {{ section.settings.text_align }};
  }

  .text-column__icon {
    font-size: 2rem;
    margin-bottom: 1rem;
  }

  .text-column__heading {
    font-size: 1.125rem;
    font-family: 'Space Grotesk', monospace;
    font-weight: 400;
    margin-bottom: 0.75rem;
  }

  .text-column__text {
    font-size: 0.875rem;
    color: rgba(0, 0, 0, 0.6);
    line-height: 1.7;
  }

  .text-column__link {
    display: inline-block;
    margin-top: 1rem;
    font-size: 0.75rem;
    color: #000;
    text-decoration: none;
    letter-spacing: 0.05em;
  }

  .text-column__link:hover {
    text-decoration: underline;
  }
{% endstyle %}

