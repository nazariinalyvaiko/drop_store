{%- comment -%}
  Image Gallery - Grid of images
{%- endcomment -%}

<section class="image-gallery" data-section-id="{{ section.id }}">
  <div class="container">
    {%- if section.settings.heading != blank -%}
      <div class="image-gallery__header">
        <h2 class="image-gallery__title">{{ section.settings.heading }}</h2>
      </div>
    {%- endif -%}

    <div class="image-gallery__grid image-gallery__grid--{{ section.settings.columns }}">
      {%- for block in section.blocks -%}
        <div class="image-gallery__item" {{ block.shopify_attributes }}>
          {%- if block.settings.link != blank -%}<a href="{{ block.settings.link }}" class="image-gallery__link">{%- endif -%}
            {%- if block.settings.image != blank -%}
              <img 
                src="{{ block.settings.image | image_url: width: 600 }}"
                alt="{{ block.settings.image.alt | escape | default: block.settings.caption }}"
                loading="lazy"
                class="image-gallery__image"
                width="600"
                height="600"
              >
            {%- else -%}
              <div class="image-gallery__placeholder"></div>
            {%- endif -%}
            {%- if block.settings.caption != blank -%}
              <div class="image-gallery__caption">{{ block.settings.caption }}</div>
            {%- endif -%}
          {%- if block.settings.link != blank -%}</a>{%- endif -%}
        </div>
      {%- endfor -%}
    </div>
  </div>
</section>

{% style %}
  .image-gallery {
    padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px;
    background: {{ section.settings.bg_color }};
  }

  .image-gallery__header {
    text-align: center;
    margin-bottom: 2rem;
  }

  .image-gallery__title {
    font-size: 1.5rem;
    font-family: 'Space Grotesk', monospace;
    font-weight: 300;
    letter-spacing: 0.1em;
  }

  .image-gallery__grid {
    display: grid;
    gap: {{ section.settings.gap }}px;
  }

  .image-gallery__grid--2 { grid-template-columns: repeat(2, 1fr); }
  .image-gallery__grid--3 { grid-template-columns: repeat(3, 1fr); }
  .image-gallery__grid--4 { grid-template-columns: repeat(4, 1fr); }

  @media (max-width: 768px) {
    .image-gallery__grid--3,
    .image-gallery__grid--4 {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  .image-gallery__item {
    position: relative;
    overflow: hidden;
  }

  .image-gallery__link {
    display: block;
  }

  .image-gallery__image {
    width: 100%;
    aspect-ratio: 1;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .image-gallery__item:hover .image-gallery__image {
    transform: scale(1.05);
  }

  .image-gallery__placeholder {
    width: 100%;
    aspect-ratio: 1;
    background: #e5e7eb;
  }

  .image-gallery__caption {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 1rem;
    background: linear-gradient(transparent, rgba(0,0,0,0.7));
    color: #fff;
    font-size: 0.875rem;
    font-family: 'Space Grotesk', monospace;
  }
{% endstyle %}

{% schema %}
{
  "name": "Image Gallery",
  "tag": "section",
  "class": "section-image-gallery",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "select",
      "id": "columns",
      "label": "Columns",
      "options": [
        { "value": "2", "label": "2" },
        { "value": "3", "label": "3" },
        { "value": "4", "label": "4" }
      ],
      "default": "3"
    },
    {
      "type": "range",
      "id": "gap",
      "label": "Gap",
      "min": 0, "max": 30, "step": 5, "default": 10, "unit": "px"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding Top",
      "min": 0, "max": 100, "step": 10, "default": 40, "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding Bottom",
      "min": 0, "max": 100, "step": 10, "default": 40, "unit": "px"
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "caption",
          "label": "Caption"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Image Gallery",
      "blocks": [
        { "type": "image" },
        { "type": "image" },
        { "type": "image" }
      ]
    }
  ]
}
{% endschema %}

