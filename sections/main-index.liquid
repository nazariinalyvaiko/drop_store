{%- comment -%}
  Main Index Section - Homepage Content
{%- endcomment -%}

<!-- Hero Section -->
<section class="hero" data-section-id="{{ section.id }}">
  <div class="hero__container">
    <div class="hero__content">
      <div class="hero__content-inner">
        <div class="hero__label">
          <span>{{ section.settings.label | default: 'Est. 2026' }}</span>
        </div>
        
        <h1 class="hero__heading">
          {{ section.settings.heading | default: 'Best for You' }}
        </h1>
        
        <p class="hero__subtitle">
          {{ section.settings.subtitle | default: 'Smart devices for modern life. Quality, status, exclusivity.' }}
        </p>
        
        <div class="hero__actions">
          {%- if section.settings.button_label != blank -%}
            <a href="{{ section.settings.button_link | default: '/collections/all' }}" class="hero__btn hero__btn--primary">
              <span>{{ section.settings.button_label }}</span>
              <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M5 12h14m-7-7 7 7-7 7"/>
              </svg>
            </a>
          {%- endif -%}
        </div>
        
        <div class="hero__tags">
          <span class="hero__tag">AI Gadgets</span>
          <span class="hero__tag-dot"></span>
          <span class="hero__tag">Smart Home</span>
          <span class="hero__tag-dot"></span>
          <span class="hero__tag">Wearables</span>
        </div>
      </div>
    </div>
  </div>
  
  <div class="hero__bottom">
    <div class="hero__bottom-container container">
      <div class="hero__search">
        <form action="{{ routes.search_url }}" method="get" class="hero__search-form">
          <div class="hero__search-icon">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <circle cx="11" cy="11" r="8"/>
              <path d="m21 21-4.35-4.35"/>
            </svg>
          </div>
          <input type="search" name="q" placeholder="Search products..." class="hero__search-input">
          <button type="submit" class="hero__search-btn">Search</button>
        </form>
      </div>
      
      <div class="hero__info">
        <div class="hero__info-item">
          <div class="hero__info-label">Shipping</div>
          <div class="hero__info-value">Worldwide</div>
        </div>
        <div class="hero__info-item">
          <div class="hero__info-label">Support</div>
          <div class="hero__info-value">24/7</div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Featured Products -->
<section class="featured-products">
  <div class="container">
    <div class="featured-products__header">
      <div class="section-divider">
        <div class="section-divider__line section-divider__line--short"></div>
        <span class="section-divider__text">01</span>
        <div class="section-divider__line section-divider__line--long"></div>
      </div>
      
      <h2 class="featured-products__title">PRODUCTS</h2>
      
      <div class="section-divider">
        <div class="section-divider__line section-divider__line--long"></div>
        <span class="section-divider__text">
          {%- assign product_count = collections.all.products.size -%}
          {{ product_count | default: 6 }}
        </span>
        <div class="section-divider__line section-divider__line--short"></div>
      </div>
    </div>

    <div class="featured-products__grid">
      {%- for product in collections.all.products limit: 6 -%}
        {% render 'product-card', product: product, index: forloop.index %}
      {%- else -%}
        {%- for i in (1..6) -%}
          <div class="product-card">
            <div class="product-card__media">
              {{ 'product-1' | placeholder_svg_tag: 'product-card__placeholder' }}
            </div>
            <div class="product-card__content">
              <h3 class="product-card__title">Sample Product {{ i }}</h3>
              <p class="product-card__description">Premium quality product for modern lifestyle.</p>
              <div class="product-card__footer">
                <span class="product-card__price">$99.00</span>
                <button class="btn btn-primary" disabled>Add</button>
              </div>
            </div>
          </div>
        {%- endfor -%}
      {%- endfor -%}
    </div>

    <div class="featured-products__footer">
      <a href="{{ routes.all_products_collection_url }}" class="featured-products__view-all">
        <span>VIEW ALL</span>
        <span class="featured-products__view-all-arrow">→</span>
      </a>
    </div>
  </div>
</section>

