    }
  }

  .story__meta span {
    font-size: 0.625rem;
    font-family: 'Space Grotesk', monospace;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    color: rgba(0, 0, 0, 0.3);
  }

  .story__heading {
    font-size: 1.25rem;
    font-family: 'Space Grotesk', monospace;
    font-weight: 300;
    color: #000;
    letter-spacing: 0.05em;
    margin: 0.75rem 0;
  }

  @media (min-width: 768px) {
    .story__heading {
      font-size: 1.5rem;
    }
  }

  .story__excerpt {
    font-size: 0.875rem;
    color: rgba(0, 0, 0, 0.5);
    line-height: 1.6;
    margin-bottom: 1.5rem;
  }

  .story__link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.75rem;
    font-family: 'Space Grotesk', monospace;
    color: rgba(0, 0, 0, 0.6);
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .story__link:hover {
