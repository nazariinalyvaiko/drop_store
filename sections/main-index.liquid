    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Explore"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link",
      "default": "/collections/all"
    }
  ]
}
{% endschema %}
