    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
  }

  .section-divider__line {
    height: 1px;
    background: rgba(0, 0, 0, 0.1);
  }

  .section-divider__line--short {
    width: 1.5rem;
  }

  .section-divider__line--long {
    width: 4rem;
  }

  @media (min-width: 768px) {
    .section-divider__line--short {
      width: 2rem;
    }

    .section-divider__line--long {
      width: 6rem;
    }
  }

  .section-divider__text {
    font-size: 0.6875rem;
    font-family: 'Space Grotesk', monospace;
    letter-spacing: 0.1em;
    color: rgba(0, 0, 0, 0.3);
  }
{% endstyle %}

{% schema %}
{
  "name": "Homepage",
  "tag": "div",
  "class": "main-index",
  "settings": [
    {
      "type": "text",
      "id": "label",
      "label": "Top Label",
      "default": "Est. 2026"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
