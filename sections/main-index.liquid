{% style %}
  /* Hero - Compact */
  .hero {
    position: relative;
    background: #fff;
    overflow: hidden;
  }

  .hero__container {
    display: flex;
    flex-direction: column;
    padding: 2.5rem 1.5rem 2rem;
  }

  @media (min-width: 768px) {
    .hero__container {
      padding: 3rem 3rem 2.5rem;
    }
  }

  .hero__content-inner {
    max-width: 32rem;
  }

  .hero__label span {
    font-size: 0.625rem;
    font-family: 'Space Grotesk', monospace;
    letter-spacing: 0.3em;
    text-transform: uppercase;
    color: rgba(0, 0, 0, 0.4);
  }

  .hero__heading {
    font-size: clamp(2rem, 5vw, 3.5rem);
    font-weight: 300;
    line-height: 1.1;
    letter-spacing: -0.02em;
    margin: 1rem 0;
    color: #000;
  }

  .hero__subtitle {
    font-size: 0.875rem;
    line-height: 1.6;
    max-width: 24rem;
    color: rgba(0, 0, 0, 0.5);
    margin-bottom: 1.5rem;
  }

  .hero__actions {
    margin-bottom: 1.5rem;
  }

  .hero__btn--primary {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    background: #000;
    color: #fff;
    font-size: 0.75rem;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    text-decoration: none;
    transition: background 0.3s ease;
  }

  .hero__btn--primary:hover {
    background: rgba(0, 0, 0, 0.8);
  }

  .hero__tags {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    flex-wrap: wrap;
  }

  .hero__tag {
    font-size: 0.625rem;
    font-family: 'Space Grotesk', monospace;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    color: rgba(0, 0, 0, 0.3);
  }

  .hero__tag-dot {
    width: 0.25rem;
    height: 0.25rem;
    border-radius: 9999px;
    background: rgba(0, 0, 0, 0.2);
  }

  /* Bottom bar */
  .hero__bottom {
    border-top: 1px solid rgba(0, 0, 0, 0.1);
    background: #fff;
  }

  .hero__bottom-container {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    padding: 0.75rem 1rem;
  }

  @media (min-width: 768px) {
    .hero__bottom-container {
      flex-direction: row;
      align-items: center;
      justify-content: space-between;
      padding: 0.75rem 3rem;
    }
  }

  .hero__search {
    flex: 1;
    max-width: 28rem;
  }

  .hero__search-form {
    position: relative;
    display: flex;
    align-items: center;
  }

  .hero__search-icon {
    position: absolute;
    left: 1rem;
    color: rgba(0, 0, 0, 0.3);
    pointer-events: none;
  }

  .hero__search-input {
    width: 100%;
    padding: 0.75rem 6rem 0.75rem 2.75rem;
    font-size: 0.875rem;
    border: 1px solid rgba(0, 0, 0, 0.08);
    border-radius: 4px;
  }

  .hero__search-input:focus {
    outline: none;
    border-color: rgba(0, 0, 0, 0.2);
  }

  .hero__search-btn {
    position: absolute;
    right: 0.25rem;
    padding: 0.5rem 1rem;
    background: #000;
    color: #fff;
    font-size: 0.625rem;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    border: none;
    border-radius: 3px;
    cursor: pointer;
  }

  .hero__info {
    display: flex;
    gap: 1.5rem;
  }

  .hero__info-label {
    font-size: 0.5rem;
    font-family: 'Space Grotesk', monospace;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    color: rgba(0, 0, 0, 0.3);
  }

  .hero__info-value {
    font-size: 0.75rem;
    color: rgba(0, 0, 0, 0.6);
  }

  /* Featured Products */
  .featured-products {
    padding: 4rem 0;
    background: #fff;
    border-top: 1px solid rgba(0, 0, 0, 0.05);
  }

  .featured-products__header {
    margin-bottom: 3rem;
  }

  .featured-products__title {
    text-align: center;
    font-size: 1.5rem;
    font-family: 'Space Grotesk', monospace;
    font-weight: 300;
    color: #000;
    letter-spacing: 0.1em;
    padding: 1.5rem 0;
  }

  @media (min-width: 768px) {
    .featured-products__title {
      font-size: 1.75rem;
    }
  }

  .featured-products__grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1rem;
    margin-bottom: 2rem;
  }

  @media (min-width: 768px) {
    .featured-products__grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 1.5rem;
    }
  }

  .featured-products__footer {
    display: flex;
    justify-content: center;
    margin-top: 2rem;
  }

  .featured-products__view-all {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    padding: 1rem 2rem;
    font-size: 0.75rem;
    font-family: 'Space Grotesk', monospace;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    color: #000;
    text-decoration: none;
    border: 1px solid rgba(0, 0, 0, 0.3);
    transition: all 0.3s ease;
  }

  .featured-products__view-all:hover {
    border-color: #000;
    background: rgba(0, 0, 0, 0.02);
  }

  /* Stories */
  .stories {
    padding: 4rem 0;
    background: #fafafa;
    border-top: 1px solid rgba(0, 0, 0, 0.05);
  }

  .stories__header {
    margin-bottom: 3rem;
  }

  .stories__title {
    text-align: center;
    font-size: 1.5rem;
    font-family: 'Space Grotesk', monospace;
    font-weight: 300;
    color: #000;
    letter-spacing: 0.1em;
    padding: 1.5rem 0;
  }

  @media (min-width: 768px) {
    .stories__title {
      font-size: 1.75rem;
    }
  }

  .stories__list {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .story__grid {
    display: grid;
    grid-template-columns: 1fr;
    border: 1px solid rgba(0, 0, 0, 0.1);
    background: #fff;
    transition: border-color 0.3s ease;
  }

  .story__grid:hover {
    border-color: rgba(0, 0, 0, 0.3);
  }

  @media (min-width: 768px) {
    .story__grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  .story__media {
    position: relative;
    aspect-ratio: 16 / 10;
    overflow: hidden;
    background: #e5e7eb;
  }

  @media (min-width: 768px) {
    .story__media {
      aspect-ratio: 4 / 3;
    }

    .story--reverse .story__media {
      order: 2;
    }
  }

  .story__placeholder {
    width: 100%;
    height: 100%;
    background: #d1d5db;
  }

  .story__badge {
    position: absolute;
    top: 1rem;
    left: 1rem;
    padding: 0.375rem 0.75rem;
    background: #000;
    color: #fff;
  }

  .story__badge span {
    font-size: 0.625rem;
    font-family: 'Space Grotesk', monospace;
    font-weight: 300;
    letter-spacing: 0.05em;
    text-transform: uppercase;
  }

  .story__content {
    padding: 2rem;
    display: flex;
    flex-direction: column;
    justify-content: center;
    border-top: 1px solid rgba(0, 0, 0, 0.1);
  }

  @media (min-width: 768px) {
    .story__content {
