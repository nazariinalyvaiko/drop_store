{%- liquid
  assign products_per_page = section.settings.products_per_page | default: 12
-%}

<section class="collection-page" data-section-id="{{ section.id }}">
  <div class="container">
    <!-- Section Header -->
    <div class="collection-page__header">
      {%- if section.settings.show_heading -%}
        <h1 class="collection-page__title">
          {{ collection.title }}
        </h1>
      {%- endif -%}
    </div>

    {%- if collection.description != blank -%}
      <div class="collection-page__description">
        {{ collection.description }}
      </div>
    {%- endif -%}

    <!-- Toolbar -->
    {%- if section.settings.enable_filtering or section.settings.enable_sorting -%}
      <div class="collection-page__toolbar">
        {%- if section.settings.enable_filtering -%}
          <div class="collection-page__filters">
            <!-- Price Filter -->
            {%- assign min_price = collection.products[0].price -%}
            {%- assign max_price = collection.products[0].price -%}
            {%- for product in collection.products -%}
              {%- if product.price < min_price -%}
                {%- assign min_price = product.price -%}
              {%- endif -%}
              {%- if product.price > max_price -%}
                {%- assign max_price = product.price -%}
              {%- endif -%}
            {%- endfor -%}

            <div class="price-filter">
              <div class="price-filter__values">
                <span id="min-price">{{ min_price | money }}</span>
                -
                <span id="max-price">{{ max_price | money }}</span>
              </div>
              <div class="slider-container">
                <input type="range" id="price-min" min="{{ min_price }}" max="{{ max_price }}" value="{{ min_price }}" step="1">
                <input type="range" id="price-max" min="{{ min_price }}" max="{{ max_price }}" value="{{ max_price }}" step="1">
                <div class="slider-track"></div>
              </div>
            </div>
          </div>
        {%- endif -%}

        {%- if section.settings.enable_sorting -%}
          <div class="collection-page__sort">
            <label for="sort-by" class="collection-page__sort-label">Sort by:</label>
            <select id="sort-by" class="collection-page__sort-select" data-collection-sort>
              {%- for option in collection.sort_options -%}
                <option value="{{ option.value }}" {% if option.value == collection.sort_by %}selected{% endif %}>
                  {{ option.name }}
                </option>
              {%- endfor -%}
            </select>
          </div>
        {%- endif -%}
      </div>
    {%- endif -%}

    <!-- Products Grid -->
    {%- paginate collection.products by products_per_page -%}
      {%- if collection.products.size > 0 -%}
        <div class="collection-page__grid">
          {%- for product in collection.products -%}
            {% render 'product-card', product: product, index: forloop.index %}
          {%- endfor -%}
        </div>

        {%- if paginate.pages > 1 -%}
          <div class="collection-page__pagination">
            <nav class="pagination" role="navigation" aria-label="Pagination">
              {%- if paginate.previous -%}
                <a href="{{ paginate.previous.url }}" class="pagination__link pagination__link--prev">
                  ← Previous
                </a>
              {%- endif -%}

              <span class="pagination__current">
                Page {{ paginate.current_page }} / {{ paginate.pages }}
              </span>

              {%- if paginate.next -%}
                <a href="{{ paginate.next.url }}" class="pagination__link pagination__link--next">
                  Next →
                </a>
              {%- endif -%}
            </nav>
          </div>
        {%- endif -%}
      {%- else -%}
        <div class="collection-page__empty">
          <p>No products found in this collection.</p>
        </div>
      {%- endif -%}
    {%- endpaginate -%}
  </div>
</section>

{% style %}
.collection-page__filters {
  width: 100%;
  text-align: center;
  margin-bottom: 2rem;
}

.price-filter__values {
  font-family: 'Inter', sans-serif;
  font-weight: 500;
  margin-bottom: 1rem;
  font-size: 1rem;
  color: rgba(0,0,0,0.7);
}

.slider-container {
  position: relative;
  width: 70%; /* можна збільшити ширину */
  height: 10px;
  margin: 0 auto;
}

.slider-container input[type=range] {
  position: absolute;
  width: 100%;
  height: 10px;
  pointer-events: none;
  -webkit-appearance: none;
  background: transparent;
}

.slider-container input[type=range]::-webkit-slider-thumb {
  pointer-events: all;
  width: 20px;
  height: 20px;
  border-radius: 50%;
  background: #000;
  border: none;
  -webkit-appearance: none;
}

.slider-container input[type=range]::-moz-range-thumb {
  pointer-events: all;
  width: 20px;
  height: 20px;
  border-radius: 50%;
  background: #000;
  border: none;
}

.slider-track {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  height: 6px;
  width: 100%;
  border-radius: 3px;
  background: rgba(0,0,0,0.1);
  z-index: 0;
}

.slider-track::before {
  content: '';
  position: absolute;
  height: 100%;
  border-radius: 3px;
  background: #000;
  z-index: 1;
}
{% endstyle %}

<script>
document.addEventListener('DOMContentLoaded', function() {
  // Sorting
  const sortSelect = document.querySelector('[data-collection-sort]');
  if(sortSelect){
    sortSelect.addEventListener('change', function(){
      const url = new URL(window.location.href);
      url.searchParams.set('sort_by', this.value);
      window.location.href = url.toString();
    });
  }

  // Double range slider
  const minSlider = document.getElementById('price-min');
  const maxSlider = document.getElementById('price-max');
  const minLabel = document.getElementById('min-price');
  const maxLabel = document.getElementById('max-price');
  const track = document.querySelector('.slider-track');

  function updateTrack() {
    const min = parseInt(minSlider.min);
    const max = parseInt(maxSlider.max);
    const minVal = parseInt(minSlider.value);
    const maxVal = parseInt(maxSlider.value);
    const range = max - min;
    const left = ((minVal - min) / range) * 100;
    const right = ((maxVal - min) / range) * 100;

    track.style.background = `linear-gradient(to right, rgba(0,0,0,0.1) ${left}% , #000 ${left}% , #000 ${right}%, rgba(0,0,0,0.1) ${right}%)`;
  }

  function updateLabels() {
    minLabel.textContent = new Intl.NumberFormat('en-US', { style: 'currency', currency: 'USD' }).format(minSlider.value / 100);
    maxLabel.textContent = new Intl.NumberFormat('en-US', { style: 'currency', currency: 'USD' }).format(maxSlider.value / 100);
  }

  minSlider.addEventListener('input', function(){
    if(parseInt(minSlider.value) > parseInt(maxSlider.value)){
      minSlider.value = maxSlider.value;
    }
    updateTrack();
    updateLabels();
  });

  maxSlider.addEventListener('input', function(){
    if(parseInt(maxSlider.value) < parseInt(minSlider.value)){
      maxSlider.value = minSlider.value;
    }
    updateTrack();
    updateLabels();
  });

  // Initialize
  updateTrack();
  updateLabels();

  // Apply filter on change
  minSlider.addEventListener('change', function(){
    const url = new URL(window.location.href);
    url.searchParams.set('price_min', minSlider.value);
    url.searchParams.set('price_max', maxSlider.value);
    window.location.href = url.toString();
  });

  maxSlider.addEventListener('change', function(){
    const url = new URL(window.location.href);
    url.searchParams.set('price_min', minSlider.value);
    url.searchParams.set('price_max', maxSlider.value);
    window.location.href = url.toString();
  });
});
</script>
