<section class="cart-page" data-section-id="{{ section.id }}">
  <div class="container">
    <!-- Section Header -->
    <div class="cart-page__header">
      <div class="section-divider">
        <div class="section-divider__line section-divider__line--short"></div>
        <span class="section-divider__text">CART</span>
        <div class="section-divider__line section-divider__line--long"></div>
      </div>
      
      <h1 class="cart-page__title">Cart</h1>
      
      <div class="section-divider">
        <div class="section-divider__line section-divider__line--long"></div>
        <span class="section-divider__text">{{ cart.item_count }}</span>
        <div class="section-divider__line section-divider__line--short"></div>
      </div>
    </div>

    {%- if cart.item_count == 0 -%}
      <div class="cart-page__empty">
        <p class="cart-page__empty-text">Your cart is empty</p>
        <a href="{{ routes.collections_url }}" class="btn btn-primary">
          Continue Shopping
        </a>
      </div>
    {%- else -%}
      <form action="{{ routes.cart_url }}" method="post" class="cart-form">
        <div class="cart-page__grid">
          <!-- Cart Items -->
          <div class="cart-page__items">
            {%- for item in cart.items -%}
              <div class="cart-item" data-key="{{ item.key }}">
                <div class="cart-item__image">
                  {%- if item.image -%}
                    <a href="{{ item.url }}">
                      <img 
                        src="{{ item.image | image_url: width: 200 }}"
                        alt="{{ item.title | escape }}"
                        loading="lazy"
                      >
                    </a>
                  {%- endif -%}
                </div>
                
                <div class="cart-item__details">
                  <a href="{{ item.url }}" class="cart-item__title">{{ item.product.title }}</a>
                  {%- if item.variant.title != 'Default Title' -%}
                    <p class="cart-item__variant">{{ item.variant.title }}</p>
                  {%- endif -%}
                  
                  {%- if section.settings.show_vendor -%}
                    <p class="cart-item__vendor">{{ item.product.vendor }}</p>
                  {%- endif -%}
                  
                  <p class="cart-item__price">{{ item.price | money }}</p>
                </div>
                
                <div class="cart-item__actions">
                  <div class="cart-item__quantity">
                    <label class="visually-hidden" for="quantity-{{ item.key }}">Quantity</label>
                    <div class="cart-item__quantity-wrapper">
                      <button type="button" class="cart-item__quantity-btn" data-action="decrease" data-key="{{ item.key }}">âˆ’</button>
                      <input type="number" id="quantity-{{ item.key }}" name="updates[]" value="{{ item.quantity }}" min="0" class="cart-item__quantity-input">
                      <button type="button" class="cart-item__quantity-btn" data-action="increase" data-key="{{ item.key }}">+</button>
                    </div>
                  </div>
                  
                  <p class="cart-item__line-price">{{ item.line_price | money }}</p>
                  
                  <a href="{{ item.url_to_remove }}" class="cart-item__remove">
                    Remove
                  </a>
                </div>
              </div>
            {%- endfor -%}
          </div>
          
          <!-- Cart Summary -->
          <div class="cart-page__summary">
            <div class="cart-summary">
              <div class="cart-summary__row">
                <span>Subtotal</span>
                <span class="cart-summary__total">{{ cart.total_price | money }}</span>
              </div>
              
              <p class="cart-summary__note">
                Taxes and shipping calculated at checkout
              </p>
              
              <button type="submit" name="checkout" class="cart-summary__checkout btn btn-primary">
                Checkout
              </button>
              
              <a href="{{ routes.collections_url }}" class="cart-summary__continue">
                Continue Shopping
              </a>
            </div>
          </div>
        </div>
      </form>
    {%- endif -%}
  </div>
</section>

{% style %}
  .cart-page {
    padding: 3rem 0;
  }

  .cart-page__header {
    margin-bottom: 3rem;
  }

  .cart-page__title {
    text-align: center;
    font-size: 1.875rem;
    font-family: 'Space Grotesk', monospace;
    font-weight: 300;
    color: #000;
    letter-spacing: 0.1em;
    line-height: 1;
    padding: 2rem 0;
  }

  .cart-page__empty {
    text-align: center;
    padding: 4rem 0;
  }

  .cart-page__empty-text {
    font-size: 1.125rem;
    color: rgba(0, 0, 0, 0.6);
    margin-bottom: 2rem;
  }

  .cart-page__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 3rem;
  }

  @media (min-width: 1024px) {
    .cart-page__grid {
      grid-template-columns: 2fr 1fr;
    }
  }

  /* Cart Items */
  .cart-page__items {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .cart-item {
    display: grid;
    grid-template-columns: 100px 1fr;
    gap: 1.5rem;
    padding: 1.5rem;
    border: 1px solid rgba(0, 0, 0, 0.1);
  }

  @media (min-width: 768px) {
    .cart-item {
      grid-template-columns: 120px 1fr auto;
    }
  }

  .cart-item__image {
    background: #f3f4f6;
    aspect-ratio: 1;
  }

  .cart-item__image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .cart-item__details {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .cart-item__title {
    font-size: 1rem;
    font-family: 'Space Grotesk', monospace;
    font-weight: 300;
    color: #000;
    text-decoration: none;
  }

  .cart-item__title:hover {
    text-decoration: underline;
  }

  .cart-item__variant,
  .cart-item__vendor {
    font-size: 0.875rem;
    color: rgba(0, 0, 0, 0.5);
  }

  .cart-item__price {
    font-size: 0.875rem;
    color: rgba(0, 0, 0, 0.6);
    margin-top: 0.5rem;
  }

  .cart-item__actions {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    grid-column: 1 / -1;
  }

  @media (min-width: 768px) {
    .cart-item__actions {
      grid-column: auto;
      align-items: flex-end;
    }
  }

  .cart-item__quantity-wrapper {
    display: inline-flex;
    border: 1px solid rgba(0, 0, 0, 0.1);
  }

  .cart-item__quantity-btn {
    padding: 0.5rem 0.75rem;
    background: transparent;
    border: none;
    cursor: pointer;
    font-size: 1rem;
  }

  .cart-item__quantity-input {
    width: 3rem;
    text-align: center;
    border: none;
    border-left: 1px solid rgba(0, 0, 0, 0.1);
    border-right: 1px solid rgba(0, 0, 0, 0.1);
    font-size: 0.875rem;
  }

  .cart-item__line-price {
    font-size: 1.125rem;
    font-family: 'Space Grotesk', monospace;
    font-weight: 300;
  }

  .cart-item__remove {
    font-size: 0.75rem;
    color: rgba(0, 0, 0, 0.4);
    text-decoration: underline;
  }

  /* Summary */
  .cart-summary {
    padding: 2rem;
    background: #f9fafb;
    border: 1px solid rgba(0, 0, 0, 0.1);
    position: sticky;
    top: 6rem;
  }

  .cart-summary__row {
    display: flex;
    justify-content: space-between;
    font-size: 1.125rem;
    margin-bottom: 1rem;
  }

  .cart-summary__total {
    font-family: 'Space Grotesk', monospace;
    font-weight: 700;
  }

  .cart-summary__note {
    font-size: 0.875rem;
    color: rgba(0, 0, 0, 0.5);
    margin-bottom: 1.5rem;
  }

  .cart-summary__checkout {
    width: 100%;
    padding: 1rem;
    margin-bottom: 1rem;
  }

  .cart-summary__continue {
    display: block;
    text-align: center;
    font-size: 0.875rem;
    color: rgba(0, 0, 0, 0.6);
    text-decoration: none;
  }

  .cart-summary__continue:hover {
    text-decoration: underline;
  }
{% endstyle %}

{% schema %}
{
  "name": "Cart Page",
  "tag": "section",
  "class": "section-main-cart",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_vendor",
      "label": "Show vendor",
      "default": false
    }
  ]
}
{% endschema %}

