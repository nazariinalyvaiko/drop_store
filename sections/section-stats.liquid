{%- comment -%}
  Stats/Numbers - Showcase key metrics
{%- endcomment -%}

<section class="stats" data-section-id="{{ section.id }}" style="
  --stats-bg: {{ section.settings.bg_color }};
  --stats-text: {{ section.settings.text_color }};
  --stats-accent: {{ section.settings.accent_color }};
  --stats-muted: {{ section.settings.muted_color }};
">
  <div class="container">
    {%- if section.settings.heading != blank -%}
      <div class="stats__header" style="text-align: {{ section.settings.text_align }};">
        <h2 class="stats__title">{{ section.settings.heading }}</h2>
      </div>
    {%- endif -%}

    <div class="stats__grid stats__grid--{{ section.settings.columns }}">
      {%- for block in section.blocks -%}
        <div class="stat-item" {{ block.shopify_attributes }} style="text-align: {{ section.settings.text_align }};">
          {%- if block.settings.prefix != blank -%}
            <span class="stat-item__prefix">{{ block.settings.prefix }}</span>
          {%- endif -%}
          <span class="stat-item__number" style="font-size: {{ section.settings.number_size }}rem; font-weight: {{ section.settings.number_weight }};">
            {{ block.settings.number }}
          </span>
          {%- if block.settings.suffix != blank -%}
            <span class="stat-item__suffix">{{ block.settings.suffix }}</span>
          {%- endif -%}
          <span class="stat-item__label">{{ block.settings.label }}</span>
        </div>
      {%- endfor -%}
    </div>
  </div>
</section>

{% style %}
  .stats {
    padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px;
    background: var(--stats-bg);
    color: var(--stats-text);
    {%- if section.settings.border_top -%}
    border-top: 1px solid rgba(128, 128, 128, 0.15);
    {%- endif -%}
    {%- if section.settings.border_bottom -%}
    border-bottom: 1px solid rgba(128, 128, 128, 0.15);
    {%- endif -%}
  }

  .stats__header {
    margin-bottom: 2.5rem;
  }

  .stats__title {
    font-size: 1.25rem;
    font-family: 'Space Grotesk', monospace;
    font-weight: 300;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: var(--stats-muted);
  }

  .stats__grid {
    display: grid;
    gap: 2rem;
  }

  .stats__grid--2 { grid-template-columns: repeat(2, 1fr); }
  .stats__grid--3 { grid-template-columns: repeat(3, 1fr); }
  .stats__grid--4 { grid-template-columns: repeat(4, 1fr); }
  .stats__grid--5 { grid-template-columns: repeat(5, 1fr); }

  @media (max-width: 768px) {
    .stats__grid--3,
    .stats__grid--4,
    .stats__grid--5 { grid-template-columns: repeat(2, 1fr); }
  }

  @media (max-width: 480px) {
    .stats__grid--2,
    .stats__grid--3,
    .stats__grid--4,
    .stats__grid--5 { grid-template-columns: 1fr; }
  }

  .stat-item {
    position: relative;
  }

  .stat-item__prefix,
  .stat-item__suffix {
    font-size: calc({{ section.settings.number_size }}rem * 0.5);
    font-family: 'Space Grotesk', monospace;
    color: var(--stats-accent);
    vertical-align: super;
  }

  .stat-item__number {
    display: inline-block;
    font-family: 'Space Grotesk', monospace;
    line-height: 1;
    color: var(--stats-accent);
    letter-spacing: -0.02em;
  }

  .stat-item__label {
    display: block;
    margin-top: 0.5rem;
    font-size: 0.8125rem;
    font-family: 'Space Grotesk', monospace;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: var(--stats-muted);
  }
{% endstyle %}

{% schema %}
{
  "name": "Stats",
  "tag": "section",
  "class": "section-stats",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "select",
      "id": "columns",
      "label": "Columns",
      "options": [
        { "value": "2", "label": "2" },
        { "value": "3", "label": "3" },
        { "value": "4", "label": "4" },
        { "value": "5", "label": "5" }
      ],
      "default": "4"
    },
    {
      "type": "select",
      "id": "text_align",
      "label": "Text Alignment",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" }
      ],
      "default": "center"
    },
    {
      "type": "header",
      "content": "Typography"
    },
    {
      "type": "range",
      "id": "number_size",
      "label": "Number Size",
      "min": 2, "max": 6, "step": 0.5, "default": 3.5, "unit": "rem"
    },
    {
      "type": "select",
      "id": "number_weight",
      "label": "Number Weight",
      "options": [
        { "value": "200", "label": "Extra Light" },
        { "value": "300", "label": "Light" },
        { "value": "400", "label": "Regular" },
        { "value": "500", "label": "Medium" }
      ],
      "default": "300"
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "accent_color",
      "label": "Number Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "muted_color",
      "label": "Label Color",
      "default": "#999999"
    },
    {
      "type": "header",
      "content": "Borders"
    },
    {
      "type": "checkbox",
      "id": "border_top",
      "label": "Border Top",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "border_bottom",
      "label": "Border Bottom",
      "default": false
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding Top",
      "min": 20, "max": 120, "step": 10, "default": 60, "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding Bottom",
      "min": 20, "max": 120, "step": 10, "default": 60, "unit": "px"
    }
  ],
  "blocks": [
    {
      "type": "stat",
      "name": "Stat",
      "settings": [
        {
          "type": "text",
          "id": "prefix",
          "label": "Prefix",
          "info": "e.g., $, +, >"
        },
        {
          "type": "text",
          "id": "number",
          "label": "Number",
          "default": "100"
        },
        {
          "type": "text",
          "id": "suffix",
          "label": "Suffix",
          "info": "e.g., K, M, +, %"
        },
        {
          "type": "text",
          "id": "label",
          "label": "Label",
          "default": "Happy Customers"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Stats",
      "blocks": [
        { "type": "stat", "settings": { "number": "10", "suffix": "K+", "label": "Customers" } },
        { "type": "stat", "settings": { "number": "50", "suffix": "+", "label": "Countries" } },
        { "type": "stat", "settings": { "number": "99", "suffix": "%", "label": "Satisfaction" } },
        { "type": "stat", "settings": { "number": "24", "suffix": "/7", "label": "Support" } }
      ]
    }
  ]
}
{% endschema %}

