{%- comment -%}
  Collection List - Grid of collection cards
{%- endcomment -%}

<section class="collection-list" data-section-id="{{ section.id }}">
  <div class="container">
    {%- if section.settings.heading != blank -%}
      <div class="collection-list__header">
        <h2 class="collection-list__title">{{ section.settings.heading }}</h2>
      </div>
    {%- endif -%}

    <div class="collection-list__grid collection-list__grid--{{ section.settings.columns }}">
      {%- for block in section.blocks -%}
        {%- assign collection = block.settings.collection -%}
        <a href="{{ collection.url | default: '#' }}" class="collection-card" {{ block.shopify_attributes }}>
          <div class="collection-card__media">
            {%- if block.settings.image != blank -%}
              <img 
                src="{{ block.settings.image | image_url: width: 600 }}"
                alt="{{ block.settings.image.alt | escape }}"
                loading="lazy"
                class="collection-card__image"
                width="600"
                height="400"
              >
            {%- elsif collection.featured_image -%}
              <img 
                src="{{ collection.featured_image | image_url: width: 600 }}"
                alt="{{ collection.title }}"
                loading="lazy"
                class="collection-card__image"
                width="600"
                height="400"
              >
            {%- else -%}
              <div class="collection-card__placeholder"></div>
            {%- endif -%}
            <div class="collection-card__overlay"></div>
          </div>
          <div class="collection-card__content">
            <h3 class="collection-card__title">
              {{ block.settings.title | default: collection.title | default: 'Collection' }}
            </h3>
            {%- if block.settings.text != blank -%}
              <p class="collection-card__text">{{ block.settings.text }}</p>
            {%- endif -%}
            <span class="collection-card__link">Shop Now â†’</span>
          </div>
        </a>
      {%- endfor -%}
    </div>
  </div>
</section>

{% style %}
  .collection-list {
    padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px;
    background: {{ section.settings.bg_color }};
  }

  .collection-list__header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .collection-list__title {
    font-size: 1.5rem;
    font-family: 'Space Grotesk', monospace;
    font-weight: 300;
    letter-spacing: 0.1em;
  }

  .collection-list__grid {
    display: grid;
    gap: 1.5rem;
  }

  .collection-list__grid--2 { grid-template-columns: repeat(2, 1fr); }
  .collection-list__grid--3 { grid-template-columns: repeat(3, 1fr); }

  @media (max-width: 768px) {
    .collection-list__grid--2,
    .collection-list__grid--3 {
      grid-template-columns: 1fr;
    }
  }

  .collection-card {
    position: relative;
    display: block;
    text-decoration: none;
    color: inherit;
    overflow: hidden;
  }

  .collection-card__media {
    position: relative;
    aspect-ratio: 3 / 2;
    overflow: hidden;
  }

  .collection-card__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .collection-card:hover .collection-card__image {
    transform: scale(1.05);
  }

  .collection-card__placeholder {
    width: 100%;
    height: 100%;
    background: #e5e7eb;
  }

  .collection-card__overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(transparent 50%, rgba(0,0,0,0.7));
  }

  .collection-card__content {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 1.5rem;
    color: #fff;
  }

  .collection-card__title {
    font-size: 1.25rem;
    font-family: 'Space Grotesk', monospace;
    font-weight: 300;
    margin-bottom: 0.25rem;
  }

  .collection-card__text {
    font-size: 0.875rem;
    opacity: 0.8;
    margin-bottom: 0.5rem;
  }

  .collection-card__link {
    font-size: 0.75rem;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    opacity: 0.7;
    transition: opacity 0.3s;
  }

  .collection-card:hover .collection-card__link {
    opacity: 1;
  }
{% endstyle %}

{% schema %}
{
  "name": "Collection List",
  "tag": "section",
  "class": "section-collection-list",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Collections"
    },
    {
      "type": "select",
      "id": "columns",
      "label": "Columns",
      "options": [
        { "value": "2", "label": "2" },
        { "value": "3", "label": "3" }
      ],
      "default": "3"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding Top",
      "min": 0, "max": 100, "step": 10, "default": 60, "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding Bottom",
      "min": 0, "max": 100, "step": 10, "default": 60, "unit": "px"
    }
  ],
  "blocks": [
    {
      "type": "collection",
      "name": "Collection",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "Collection"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Custom Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Custom Title"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Description"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Collection List",
      "blocks": [
        { "type": "collection" },
        { "type": "collection" },
        { "type": "collection" }
      ]
    }
  ]
}
{% endschema %}

