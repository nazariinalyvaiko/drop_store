{%- comment -%}
  Rich Text - Simple text content block
{%- endcomment -%}

<section class="richtext" data-section-id="{{ section.id }}">
  <div class="container">
    <div class="richtext__inner richtext__inner--{{ section.settings.text_align }}" style="max-width: {{ section.settings.max_width }}px;">
      {%- if section.settings.heading != blank -%}
        <h2 class="richtext__heading">{{ section.settings.heading }}</h2>
      {%- endif -%}
      
      {%- if section.settings.text != blank -%}
        <div class="richtext__content">{{ section.settings.text }}</div>
      {%- endif -%}
      
      {%- if section.settings.button_label != blank -%}
        <a href="{{ section.settings.button_link }}" class="richtext__btn">
          {{ section.settings.button_label }}
        </a>
      {%- endif -%}
    </div>
  </div>
</section>

{% style %}
  .richtext {
    padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px;
    background: {{ section.settings.bg_color }};
  }

  .richtext__inner {
    margin: 0 auto;
  }

  .richtext__inner--center {
    text-align: center;
  }

  .richtext__inner--left {
    text-align: left;
  }

  .richtext__heading {
    font-size: 1.75rem;
    font-family: 'Space Grotesk', monospace;
    font-weight: 300;
    margin-bottom: 1.5rem;
  }

  .richtext__content {
    font-size: 1rem;
    line-height: 1.8;
    color: rgba(0, 0, 0, 0.7);
  }

  .richtext__content p {
    margin-bottom: 1rem;
  }

  .richtext__content p:last-child {
    margin-bottom: 0;
  }

  .richtext__btn {
    display: inline-block;
    margin-top: 1.5rem;
    padding: 0.75rem 1.5rem;
    background: #000;
    color: #fff;
    font-size: 0.75rem;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    text-decoration: none;
    transition: background 0.3s;
  }

  .richtext__btn:hover {
    background: rgba(0, 0, 0, 0.8);
  }
{% endstyle %}

{% schema %}
{
  "name": "Rich Text",
  "tag": "section",
  "class": "section-richtext",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Text",
      "default": "<p>Share your story, values, or any important information with your customers.</p>"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "header",
      "content": "Style"
    },
    {
      "type": "select",
      "id": "text_align",
      "label": "Text Alignment",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" }
      ],
      "default": "center"
    },
    {
      "type": "range",
      "id": "max_width",
      "label": "Max Width",
      "min": 400,
      "max": 1000,
      "step": 100,
      "default": 700,
      "unit": "px"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding Top",
      "min": 0, "max": 100, "step": 10, "default": 60, "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding Bottom",
      "min": 0, "max": 100, "step": 10, "default": 60, "unit": "px"
    }
  ],
  "presets": [
    {
      "name": "Rich Text"
    }
  ]
}
{% endschema %}

