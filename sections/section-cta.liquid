{%- comment -%}
  CTA - Call to Action section
{%- endcomment -%}

<section class="cta" data-section-id="{{ section.id }}" style="
  --cta-bg: {{ section.settings.bg_color }};
  --cta-text: {{ section.settings.text_color }};
  --cta-btn-bg: {{ section.settings.button_bg }};
  --cta-btn-text: {{ section.settings.button_text }};
">
  {%- if section.settings.bg_image != blank -%}
    <div class="cta__bg">
      <img 
        src="{{ section.settings.bg_image | image_url: width: 1920 }}"
        alt=""
        loading="lazy"
        class="cta__bg-img"
        width="1920"
        height="600"
      >
      <div class="cta__overlay" style="opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};"></div>
    </div>
  {%- endif -%}

  <div class="container">
    <div class="cta__inner" style="text-align: {{ section.settings.text_align }}; max-width: {{ section.settings.max_width }}rem;">
      {%- if section.settings.label != blank -%}
        <span class="cta__label">{{ section.settings.label }}</span>
      {%- endif -%}

      <h2 class="cta__heading" style="font-size: clamp({{ section.settings.heading_size_mobile }}rem, 4vw, {{ section.settings.heading_size }}rem);">
        {{ section.settings.heading }}
      </h2>

      {%- if section.settings.text != blank -%}
        <p class="cta__text">{{ section.settings.text }}</p>
      {%- endif -%}

      <div class="cta__buttons">
        {%- if section.settings.button_label != blank -%}
          <a href="{{ section.settings.button_link }}" class="cta__btn cta__btn--primary {% if section.settings.button_style == 'outline' %}cta__btn--outline{% endif %}">
            {{ section.settings.button_label }}
            {%- if section.settings.button_icon -%}
              <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M5 12h14m-7-7 7 7-7 7"/></svg>
            {%- endif -%}
          </a>
        {%- endif -%}

        {%- if section.settings.secondary_button_label != blank -%}
          <a href="{{ section.settings.secondary_button_link }}" class="cta__btn cta__btn--secondary">
            {{ section.settings.secondary_button_label }}
          </a>
        {%- endif -%}
      </div>
    </div>
  </div>
</section>

{% style %}
  .cta {
    position: relative;
    padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px;
    background: var(--cta-bg);
    color: var(--cta-text);
    overflow: hidden;
  }

  .cta__bg {
    position: absolute;
    inset: 0;
  }

  .cta__bg-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .cta__overlay {
    position: absolute;
    inset: 0;
    background: #000;
  }

  .cta__inner {
    position: relative;
    z-index: 1;
    {%- if section.settings.text_align == 'center' -%}
    margin: 0 auto;
    {%- endif -%}
  }

  .cta__label {
    display: inline-block;
    font-size: 0.625rem;
    font-family: 'Space Grotesk', monospace;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    opacity: 0.6;
    margin-bottom: 1rem;
  }

  .cta__heading {
    font-family: 'Space Grotesk', monospace;
    font-weight: {{ section.settings.heading_weight }};
    line-height: 1.2;
    margin-bottom: 1rem;
  }

  .cta__text {
    font-size: 1rem;
    line-height: 1.7;
    opacity: 0.8;
    margin-bottom: 1.5rem;
    max-width: 32rem;
    {%- if section.settings.text_align == 'center' -%}
    margin-left: auto;
    margin-right: auto;
    {%- endif -%}
  }

  .cta__buttons {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    {%- if section.settings.text_align == 'center' -%}
    justify-content: center;
    {%- endif -%}
  }

  .cta__btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: {{ section.settings.button_padding_y }}rem {{ section.settings.button_padding_x }}rem;
    font-size: {{ section.settings.button_size }}rem;
    font-family: 'Space Grotesk', monospace;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    text-decoration: none;
    transition: all 0.3s ease;
    border-radius: {{ section.settings.button_radius }}px;
  }

  .cta__btn--primary {
    background: var(--cta-btn-bg);
    color: var(--cta-btn-text);
    border: 2px solid var(--cta-btn-bg);
  }

  .cta__btn--primary:hover {
    background: transparent;
    color: var(--cta-btn-bg);
  }

  .cta__btn--outline {
    background: transparent;
    color: var(--cta-btn-bg);
  }

  .cta__btn--outline:hover {
    background: var(--cta-btn-bg);
    color: var(--cta-btn-text);
  }

  .cta__btn--secondary {
    background: transparent;
    color: var(--cta-text);
    border: 1px solid rgba(255, 255, 255, 0.3);
  }

  .cta__btn--secondary:hover {
    border-color: var(--cta-text);
  }
{% endstyle %}

{% schema %}
{
  "name": "CTA",
  "tag": "section",
  "class": "section-cta",
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "label",
      "label": "Label"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Ready to Get Started?"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Text",
      "default": "Join thousands of satisfied customers"
    },
    {
      "type": "header",
      "content": "Primary Button"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "select",
      "id": "button_style",
      "label": "Button Style",
      "options": [
        { "value": "solid", "label": "Solid" },
        { "value": "outline", "label": "Outline" }
      ],
      "default": "solid"
    },
    {
      "type": "checkbox",
      "id": "button_icon",
      "label": "Show Arrow",
      "default": true
    },
    {
      "type": "header",
      "content": "Secondary Button"
    },
    {
      "type": "text",
      "id": "secondary_button_label",
      "label": "Button Label"
    },
    {
      "type": "url",
      "id": "secondary_button_link",
      "label": "Button Link"
    },
    {
      "type": "header",
      "content": "Background"
    },
    {
      "type": "image_picker",
      "id": "bg_image",
      "label": "Background Image"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "label": "Overlay Opacity",
      "min": 0, "max": 100, "step": 5, "default": 60, "unit": "%"
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "button_bg",
      "label": "Button Background",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "button_text",
      "label": "Button Text",
      "default": "#000000"
    },
    {
      "type": "header",
      "content": "Typography"
    },
    {
      "type": "range",
      "id": "heading_size",
      "label": "Heading Size (Desktop)",
      "min": 1.5, "max": 4, "step": 0.25, "default": 2.5, "unit": "rem"
    },
    {
      "type": "range",
      "id": "heading_size_mobile",
      "label": "Heading Size (Mobile)",
      "min": 1.25, "max": 2.5, "step": 0.25, "default": 1.75, "unit": "rem"
    },
    {
      "type": "select",
      "id": "heading_weight",
      "label": "Heading Weight",
      "options": [
        { "value": "300", "label": "Light" },
        { "value": "400", "label": "Regular" },
        { "value": "500", "label": "Medium" }
      ],
      "default": "300"
    },
    {
      "type": "header",
      "content": "Buttons"
    },
    {
      "type": "range",
      "id": "button_size",
      "label": "Button Text Size",
      "min": 0.625, "max": 1, "step": 0.0625, "default": 0.75, "unit": "rem"
    },
    {
      "type": "range",
      "id": "button_padding_x",
      "label": "Button Padding X",
      "min": 1, "max": 3, "step": 0.25, "default": 2, "unit": "rem"
    },
    {
      "type": "range",
      "id": "button_padding_y",
      "label": "Button Padding Y",
      "min": 0.5, "max": 1.5, "step": 0.125, "default": 0.875, "unit": "rem"
    },
    {
      "type": "range",
      "id": "button_radius",
      "label": "Button Radius",
      "min": 0, "max": 24, "step": 2, "default": 0, "unit": "px"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "select",
      "id": "text_align",
      "label": "Text Alignment",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" }
      ],
      "default": "center"
    },
    {
      "type": "range",
      "id": "max_width",
      "label": "Content Max Width",
      "min": 24, "max": 60, "step": 4, "default": 40, "unit": "rem"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding Top",
      "min": 40, "max": 150, "step": 10, "default": 80, "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding Bottom",
      "min": 40, "max": 150, "step": 10, "default": 80, "unit": "px"
    }
  ],
  "presets": [
    {
      "name": "CTA"
    }
  ]
}
{% endschema %}

