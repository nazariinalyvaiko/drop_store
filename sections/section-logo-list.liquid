{%- comment -%}
  Logo List - Partner/brand logos
{%- endcomment -%}

<section class="logo-list" data-section-id="{{ section.id }}">
  <div class="container">
    {%- if section.settings.heading != blank -%}
      <div class="logo-list__header">
        <span class="logo-list__title">{{ section.settings.heading }}</span>
      </div>
    {%- endif -%}

    <div class="logo-list__grid">
      {%- for block in section.blocks -%}
        <div class="logo-list__item" {{ block.shopify_attributes }}>
          {%- if block.settings.link != blank -%}<a href="{{ block.settings.link }}">{%- endif -%}
            {%- if block.settings.image != blank -%}
              <img 
                src="{{ block.settings.image | image_url: width: 200 }}"
                alt="{{ block.settings.image.alt | escape | default: 'Partner logo' }}"
                loading="lazy"
                class="logo-list__image"
                width="200"
                height="100"
              >
            {%- else -%}
              <span class="logo-list__text">{{ block.settings.text | default: 'LOGO' }}</span>
            {%- endif -%}
          {%- if block.settings.link != blank -%}</a>{%- endif -%}
        </div>
      {%- endfor -%}
    </div>
  </div>
</section>

{% style %}
  .logo-list {
    padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px;
    background: {{ section.settings.bg_color }};
  }

  .logo-list__header {
    text-align: center;
    margin-bottom: 2rem;
  }

  .logo-list__title {
    font-size: 0.6875rem;
    font-family: 'Space Grotesk', monospace;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    color: rgba(0, 0, 0, 0.4);
  }

  .logo-list__grid {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
    gap: 2rem 3rem;
  }

  .logo-list__item {
    opacity: 0.5;
    transition: opacity 0.3s;
  }

  .logo-list__item:hover {
    opacity: 1;
  }

  .logo-list__item a {
    display: block;
  }

  .logo-list__image {
    max-height: 40px;
    width: auto;
    object-fit: contain;
  }

  .logo-list__text {
    font-size: 1.25rem;
    font-family: 'Space Grotesk', monospace;
    font-weight: 500;
    color: rgba(0, 0, 0, 0.4);
  }
{% endstyle %}

{% schema %}
{
  "name": "Logo List",
  "tag": "section",
  "class": "section-logo-list",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Trusted by"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background",
      "default": "#f5f5f5"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding Top",
      "min": 0, "max": 100, "step": 10, "default": 40, "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding Bottom",
      "min": 0, "max": 100, "step": 10, "default": 40, "unit": "px"
    }
  ],
  "blocks": [
    {
      "type": "logo",
      "name": "Logo",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Logo Image"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Text (if no image)",
          "default": "BRAND"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Logo List",
      "blocks": [
        { "type": "logo", "settings": { "text": "BRAND" } },
        { "type": "logo", "settings": { "text": "PARTNER" } },
        { "type": "logo", "settings": { "text": "COMPANY" } },
        { "type": "logo", "settings": { "text": "STUDIO" } }
      ]
    }
  ]
}
{% endschema %}

