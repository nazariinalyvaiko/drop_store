{% style %}
  .testimonials {
    padding: 6rem 0;
    background: #fff;
  }

  /* Header */
  .testimonials__header {
    margin-bottom: 4.5rem;
  }

  .testimonials__title {
    text-align: center;
    font-size: clamp(1.75rem, 3vw, 2.5rem);
    font-family: 'Space Grotesk', sans-serif;
    font-weight: 400;
    letter-spacing: 0.25em;
    text-transform: uppercase;
    color: #000;
  }

  /* Grid */
  .testimonials__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 3rem;
  }

  @media (min-width: 768px) {
    .testimonials__grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 4rem 3rem;
    }
  }

  @media (min-width: 1200px) {
    .testimonials__grid {
      grid-template-columns: repeat(4, 1fr);
    }
  }

  /* Testimonial */
  .testimonial {
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
    padding-top: 2rem;
    border-top: 1px solid rgba(0, 0, 0, 0.08);
  }

  .testimonial__rating {
    font-size: 0.75rem;
    letter-spacing: 0.25em;
    color: #000;
    opacity: 0.85;
  }

  .testimonial__text {
    font-size: 0.95rem;
    line-height: 1.8;
    color: rgba(0, 0, 0, 0.75);
    font-weight: 300;
    quotes: "“" "”";
  }

  .testimonial__text::before {
    content: open-quote;
  }

  .testimonial__text::after {
    content: close-quote;
  }

  .testimonial__author {
    margin-top: auto;
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .testimonial__name {
    font-size: 0.8125rem;
    font-weight: 500;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    color: #000;
  }

  .testimonial__location {
    font-size: 0.6875rem;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    color: rgba(0, 0, 0, 0.4);
  }

  /* Divider */
  .section-divider {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
  }

  .section-divider__line {
    height: 1px;
    background: rgba(0, 0, 0, 0.15);
  }

  .section-divider__line--short {
    width: 2rem;
  }

  .section-divider__line--long {
    width: 6rem;
  }

  .section-divider__text {
    font-size: 0.6875rem;
    letter-spacing: 0.3em;
    font-family: 'Space Grotesk', sans-serif;
    color: rgba(0, 0, 0, 0.35);
  }
{% endstyle %}
