<section class="hero" data-section-id="{{ section.id }}" style="
  --hero-bg: {{ section.settings.bg_color }};
  --hero-text: {{ section.settings.text_color }};
  --hero-accent: {{ section.settings.accent_color }};
  --hero-muted: {{ section.settings.muted_color }};
  --hero-btn-bg: {{ section.settings.button_bg }};
  --hero-btn-text: {{ section.settings.button_text }};
">
  {%- if section.settings.bg_image != blank -%}
    <div class="hero__bg-image">
      <img 
        src="{{ section.settings.bg_image | image_url: width: 1920 }}"
        alt=""
        loading="eager"
        class="hero__bg-img"
        width="1920"
        height="800"
      >
      <div class="hero__bg-overlay" style="opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};"></div>
    </div>
  {%- endif -%}

  <div class="hero__container">
    <div class="hero__content">
      <div class="hero__content-inner" style="text-align: {{ section.settings.text_align }};">
        <!-- Top label -->
        {%- if section.settings.label != blank -%}
          <div class="hero__label">
            <span>{{ section.settings.label }}</span>
          </div>
        {%- endif -%}
        
        <!-- Main heading -->
        <h1 class="hero__heading" style="font-size: clamp({{ section.settings.heading_size_mobile }}rem, 5vw, {{ section.settings.heading_size }}rem);">
          {{ section.settings.heading | default: 'Best for You' }}
        </h1>
        
        <!-- Subtitle -->
        {%- if section.settings.subtitle != blank -%}
          <p class="hero__subtitle">
            {{ section.settings.subtitle }}
          </p>
        {%- endif -%}
        
        <!-- CTA Buttons -->
        <div class="hero__actions" style="justify-content: {{ section.settings.text_align }};">
          {%- if section.settings.button_label != blank -%}
            <a href="{{ section.settings.button_link }}" class="hero__btn hero__btn--primary {% if section.settings.button_style == 'outline' %}hero__btn--outline{% endif %}">
              <span>{{ section.settings.button_label }}</span>
              {%- if section.settings.button_icon -%}
                <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M5 12h14m-7-7 7 7-7 7"/>
                </svg>
              {%- endif -%}
            </a>
          {%- endif -%}
          
          {%- if section.settings.secondary_button_label != blank -%}
            <a href="{{ section.settings.secondary_button_link }}" class="hero__btn hero__btn--secondary">
              {{ section.settings.secondary_button_label }}
            </a>
          {%- endif -%}
        </div>
        
        <!-- Tags -->
        {%- if section.blocks.size > 0 -%}
          <div class="hero__tags" style="justify-content: {{ section.settings.text_align }};">
            {%- for block in section.blocks -%}
              {%- if block.type == 'tag' -%}
                {%- unless forloop.first -%}
                  <span class="hero__tag-dot"></span>
                {%- endunless -%}
                <span class="hero__tag" {{ block.shopify_attributes }}>{{ block.settings.text }}</span>
              {%- endif -%}
            {%- endfor -%}
          </div>
        {%- endif -%}
      </div>
    </div>
  </div>
  
  <!-- Bottom bar with search -->
  {%- if section.settings.show_search_bar -%}
    <div class="hero__bottom">
      <div class="hero__bottom-container container">
        <div class="hero__search">
          <form action="{{ routes.search_url }}" method="get" class="hero__search-form">
            <div class="hero__search-icon">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="11" cy="11" r="8"/>
                <path d="m21 21-4.35-4.35"/>
              </svg>
            </div>
            <input 
              type="search" 
              name="q" 
              placeholder="{{ section.settings.search_placeholder | default: 'Search products...' }}"
              class="hero__search-input"
            >
            <button type="submit" class="hero__search-btn">{{ section.settings.search_button | default: 'Search' }}</button>
          </form>
        </div>
        
        {%- if section.settings.show_info_blocks -%}
          <div class="hero__info">
            {%- if section.settings.info_label_1 != blank -%}
              <div class="hero__info-item">
                <div class="hero__info-label">{{ section.settings.info_label_1 }}</div>
                <div class="hero__info-value">{{ section.settings.info_value_1 }}</div>
              </div>
            {%- endif -%}
            {%- if section.settings.info_label_2 != blank -%}
              <div class="hero__info-item">
                <div class="hero__info-label">{{ section.settings.info_label_2 }}</div>
                <div class="hero__info-value">{{ section.settings.info_value_2 }}</div>
              </div>
            {%- endif -%}
            {%- if section.settings.info_label_3 != blank -%}
              <div class="hero__info-item">
                <div class="hero__info-label">{{ section.settings.info_label_3 }}</div>
                <div class="hero__info-value">{{ section.settings.info_value_3 }}</div>
              </div>
            {%- endif -%}
          </div>
        {%- endif -%}
      </div>
    </div>
  {%- endif -%}
</section>

{% style %}
  .hero {
    position: relative;
    background: var(--hero-bg);
    color: var(--hero-text);
    overflow: hidden;
  }

  .hero__bg-image {
    position: absolute;
    inset: 0;
    z-index: 0;
  }

  .hero__bg-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .hero__bg-overlay {
    position: absolute;
    inset: 0;
    background: #000;
  }

  .hero__container {
    position: relative;
    z-index: 1;
    display: flex;
    flex-direction: column;
    padding: {{ section.settings.padding_top }}px 1.5rem {{ section.settings.padding_bottom }}px;
    min-height: {{ section.settings.min_height }}vh;
    {%- if section.settings.vertical_align == 'center' -%}
    justify-content: center;
    {%- elsif section.settings.vertical_align == 'bottom' -%}
    justify-content: flex-end;
    {%- endif -%}
  }

  @media (min-width: 768px) {
    .hero__container {
      padding: {{ section.settings.padding_top }}px 3rem {{ section.settings.padding_bottom }}px;
    }
  }

  .hero__content-inner {
    max-width: {{ section.settings.content_width }}rem;
    {%- if section.settings.text_align == 'center' -%}
    margin: 0 auto;
    {%- endif -%}
  }

  .hero__label {
    margin-bottom: 1rem;
    {%- if section.settings.animate -%}
    animation: fadeInUp 0.6s ease forwards;
    animation-delay: 0.1s;
    opacity: 0;
    {%- endif -%}
  }

  .hero__label span {
    font-size: {{ section.settings.label_size }}rem;
    font-family: 'Space Grotesk', monospace;
    letter-spacing: 0.3em;
    text-transform: uppercase;
    color: var(--hero-muted);
    {%- if section.settings.label_border -%}
    padding: 0.25rem 0.75rem;
    border: 1px solid var(--hero-muted);
    {%- endif -%}
  }

  .hero__heading {
    font-weight: {{ section.settings.heading_weight }};
    line-height: {{ section.settings.heading_line_height }};
    letter-spacing: {{ section.settings.heading_spacing }}em;
    margin-bottom: 1rem;
    color: var(--hero-text);
    {%- if section.settings.animate -%}
    animation: fadeInUp 0.6s ease forwards;
    animation-delay: 0.2s;
    opacity: 0;
    {%- endif -%}
  }

  .hero__subtitle {
    font-size: {{ section.settings.subtitle_size }}rem;
    line-height: 1.6;
    max-width: 28rem;
    color: var(--hero-muted);
    margin-bottom: 1.5rem;
    {%- if section.settings.text_align == 'center' -%}
    margin-left: auto;
    margin-right: auto;
    {%- endif -%}
    {%- if section.settings.animate -%}
    animation: fadeInUp 0.6s ease forwards;
    animation-delay: 0.3s;
    opacity: 0;
    {%- endif -%}
  }

  .hero__actions {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    flex-wrap: wrap;
    margin-bottom: 1.5rem;
    {%- if section.settings.animate -%}
    animation: fadeInUp 0.6s ease forwards;
    animation-delay: 0.4s;
    opacity: 0;
    {%- endif -%}
  }

  .hero__btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    text-decoration: none;
    transition: all 0.3s ease;
    font-family: 'Space Grotesk', monospace;
  }

  .hero__btn--primary {
    padding: {{ section.settings.button_padding_y }}rem {{ section.settings.button_padding_x }}rem;
    background: var(--hero-btn-bg);
    color: var(--hero-btn-text);
    font-size: {{ section.settings.button_size }}rem;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    border: 2px solid var(--hero-btn-bg);
  }

  .hero__btn--primary:hover {
    background: transparent;
    color: var(--hero-btn-bg);
  }

  .hero__btn--outline {
    background: transparent;
    color: var(--hero-btn-bg);
  }

  .hero__btn--outline:hover {
    background: var(--hero-btn-bg);
    color: var(--hero-btn-text);
  }

  .hero__btn--secondary {
    font-size: {{ section.settings.button_size }}rem;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: var(--hero-muted);
    padding-bottom: 0.25rem;
    border-bottom: 1px solid transparent;
  }

  .hero__btn--secondary:hover {
    color: var(--hero-text);
    border-bottom-color: var(--hero-text);
  }

  .hero__tags {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    flex-wrap: wrap;
    {%- if section.settings.animate -%}
    animation: fadeInUp 0.6s ease forwards;
    animation-delay: 0.5s;
    opacity: 0;
    {%- endif -%}
  }

  .hero__tag {
    font-size: 0.625rem;
    font-family: 'Space Grotesk', monospace;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    color: var(--hero-muted);
  }

  .hero__tag-dot {
    width: 0.25rem;
    height: 0.25rem;
    border-radius: 9999px;
    background: var(--hero-muted);
  }

  .hero__bottom {
    position: relative;
    z-index: 1;
    border-top: 1px solid rgba({{ section.settings.text_color | remove: '#' | slice: 0, 2 | prepend: '0x' | hex_to_decimal }}, {{ section.settings.text_color | remove: '#' | slice: 2, 2 | prepend: '0x' | hex_to_decimal }}, {{ section.settings.text_color | remove: '#' | slice: 4, 2 | prepend: '0x' | hex_to_decimal }}, 0.1);
    background: var(--hero-bg);
  }

  .hero__bottom-container {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    padding: 0.75rem 1rem;
  }

  @media (min-width: 768px) {
    .hero__bottom-container {
      flex-direction: row;
      align-items: center;
      justify-content: space-between;
      padding: 0.75rem 3rem;
    }
  }

  .hero__search {
    flex: 1;
    max-width: 28rem;
  }

  .hero__search-form {
    position: relative;
    display: flex;
    align-items: center;
  }

  .hero__search-icon {
    position: absolute;
    left: 1rem;
    color: var(--hero-muted);
    pointer-events: none;
    z-index: 10;
  }

  .hero__search-input {
    width: 100%;
    padding: 0.75rem 6rem 0.75rem 2.75rem;
    font-size: 0.875rem;
    font-weight: 300;
    letter-spacing: 0.05em;
    border: 1px solid rgba(0, 0, 0, 0.08);
    border-radius: {{ section.settings.border_radius }}px;
    background: rgba(255, 255, 255, 0.9);
    color: #000;
    transition: all 0.3s ease;
  }

  .hero__search-input:focus {
    outline: none;
    border-color: var(--hero-accent);
    background: #fff;
  }

  .hero__search-input::placeholder {
    color: rgba(0, 0, 0, 0.35);
  }

  .hero__search-btn {
    position: absolute;
    right: 0.25rem;
    padding: 0.5rem 1rem;
    background: var(--hero-btn-bg);
    color: var(--hero-btn-text);
    font-size: 0.625rem;
    font-weight: 300;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    border: none;
    border-radius: {{ section.settings.border_radius | minus: 2 }}px;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .hero__search-btn:hover {
    opacity: 0.85;
  }

  .hero__info {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1.5rem;
  }

  @media (min-width: 768px) {
    .hero__info {
      justify-content: flex-end;
    }
  }

  .hero__info-item {
    text-align: left;
  }

  @media (min-width: 768px) {
    .hero__info-item {
      text-align: right;
    }
  }

  .hero__info-label {
    font-size: 0.5rem;
    font-family: 'Space Grotesk', monospace;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    color: var(--hero-muted);
    margin-bottom: 0.125rem;
  }

  .hero__info-value {
    font-size: 0.75rem;
    color: var(--hero-text);
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
{% endstyle %}

