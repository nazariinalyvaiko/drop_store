<section class="hero" data-section-id="{{ section.id }}">
  <div class="hero__container">
    <div class="hero__content">
      <div class="hero__content-inner">
        <!-- Top label -->
        <div class="hero__label">
          <span>{{ section.settings.label | default: 'Est. 2026' }}</span>
        </div>
        
        <!-- Main heading -->
        <h1 class="hero__heading">
          {{ section.settings.heading | default: 'Best for You' }}
        </h1>
        
        <!-- Subtitle -->
        <p class="hero__subtitle">
          {{ section.settings.subtitle | default: 'Smart devices for modern life. Quality, status, exclusivity.' }}
        </p>
        
        <!-- CTA Buttons -->
        <div class="hero__actions">
          {%- if section.settings.button_label != blank -%}
            <a href="{{ section.settings.button_link }}" class="hero__btn hero__btn--primary">
              <span>{{ section.settings.button_label }}</span>
              <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M5 12h14m-7-7 7 7-7 7"/>
              </svg>
            </a>
          {%- endif -%}
          
          {%- if section.settings.secondary_button_label != blank -%}
            <a href="{{ section.settings.secondary_button_link }}" class="hero__btn hero__btn--secondary">
              {{ section.settings.secondary_button_label }}
            </a>
          {%- endif -%}
        </div>
        
        <!-- Bottom tags -->
        <div class="hero__tags">
          {%- for block in section.blocks -%}
            {%- if block.type == 'tag' -%}
              {%- unless forloop.first -%}
                <span class="hero__tag-dot"></span>
              {%- endunless -%}
              <span class="hero__tag" {{ block.shopify_attributes }}>{{ block.settings.text }}</span>
            {%- endif -%}
          {%- endfor -%}
        </div>
      </div>
    </div>
  </div>
  
  <!-- Bottom bar with search -->
  <div class="hero__bottom">
    <div class="hero__bottom-container container">
      <div class="hero__search">
        <form action="{{ routes.search_url }}" method="get" class="hero__search-form">
          <div class="hero__search-icon">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <circle cx="11" cy="11" r="8"/>
              <path d="m21 21-4.35-4.35"/>
            </svg>
          </div>
          <input 
            type="search" 
            name="q" 
            placeholder="Search products..."
            class="hero__search-input"
          >
          <button type="submit" class="hero__search-btn">Search</button>
        </form>
      </div>
      
      <div class="hero__info">
        <div class="hero__info-item">
          <div class="hero__info-label">{{ section.settings.info_label_1 | default: 'Shipping' }}</div>
          <div class="hero__info-value">{{ section.settings.info_value_1 | default: 'Worldwide' }}</div>
        </div>
        <div class="hero__info-item">
          <div class="hero__info-label">{{ section.settings.info_label_2 | default: 'Support' }}</div>
          <div class="hero__info-value">{{ section.settings.info_value_2 | default: '24/7' }}</div>
        </div>
      </div>
    </div>
  </div>
</section>

{% style %}
  .hero {
    position: relative;
    background: #fff;
    overflow: hidden;
  }

  .hero__container {
    display: flex;
    flex-direction: column;
    padding: 2.5rem 1.5rem 2rem;
  }

  @media (min-width: 768px) {
    .hero__container {
      padding: 3rem 3rem 2.5rem;
    }
  }

  .hero__content-inner {
    max-width: 32rem;
  }

  .hero__label {
    margin-bottom: 1rem;
  }

  .hero__label span {
    font-size: 0.625rem;
    font-family: 'Space Grotesk', monospace;
    letter-spacing: 0.3em;
    text-transform: uppercase;
    color: rgba(0, 0, 0, 0.4);
  }

  .hero__heading {
    font-size: clamp(2rem, 5vw, 3.5rem);
    font-weight: 300;
    line-height: 1.1;
    letter-spacing: -0.02em;
    margin-bottom: 1rem;
    color: #000;
  }

  .hero__subtitle {
    font-size: 0.875rem;
    line-height: 1.6;
    max-width: 24rem;
    color: rgba(0, 0, 0, 0.5);
    margin-bottom: 1.5rem;
  }

  .hero__actions {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    margin-bottom: 1.5rem;
  }

  .hero__btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .hero__btn--primary {
    padding: 0.75rem 1.5rem;
    background: #000;
    color: #fff;
    font-size: 0.75rem;
    letter-spacing: 0.15em;
    text-transform: uppercase;
  }

  .hero__btn--primary:hover {
    background: rgba(0, 0, 0, 0.8);
  }

  .hero__btn--secondary {
    font-size: 0.75rem;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: rgba(0, 0, 0, 0.6);
  }

  .hero__btn--secondary:hover {
    color: #000;
  }

  .hero__tags {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    flex-wrap: wrap;
  }

  .hero__tag {
    font-size: 0.625rem;
    font-family: 'Space Grotesk', monospace;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    color: rgba(0, 0, 0, 0.3);
  }

  .hero__tag-dot {
    width: 0.25rem;
    height: 0.25rem;
    border-radius: 9999px;
    background: rgba(0, 0, 0, 0.2);
  }

  .hero__bottom {
    border-top: 1px solid rgba(0, 0, 0, 0.1);
    background: #fff;
  }

  .hero__bottom-container {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    padding: 0.75rem 1rem;
  }

  @media (min-width: 768px) {
    .hero__bottom-container {
      flex-direction: row;
      align-items: center;
      justify-content: space-between;
      padding: 0.75rem 3rem;
    }
  }

  .hero__search {
    flex: 1;
    max-width: 28rem;
  }

  .hero__search-form {
    position: relative;
    display: flex;
    align-items: center;
  }

  .hero__search-icon {
    position: absolute;
    left: 1rem;
    color: rgba(0, 0, 0, 0.3);
    pointer-events: none;
    z-index: 10;
  }

  .hero__search-input {
    width: 100%;
    padding: 0.75rem 6rem 0.75rem 2.75rem;
    font-size: 0.875rem;
    font-weight: 300;
    letter-spacing: 0.05em;
    border: 1px solid rgba(0, 0, 0, 0.08);
    border-radius: 4px;
    background: rgba(255, 255, 255, 0.9);
    transition: all 0.3s ease;
  }

  .hero__search-input:focus {
    outline: none;
    border-color: rgba(0, 0, 0, 0.2);
    background: #fff;
  }

  .hero__search-input::placeholder {
    color: rgba(0, 0, 0, 0.35);
  }

  .hero__search-btn {
    position: absolute;
    right: 0.25rem;
    padding: 0.5rem 1rem;
    background: #000;
    color: #fff;
    font-size: 0.625rem;
    font-weight: 300;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    border: none;
    border-radius: 3px;
    cursor: pointer;
    transition: background 0.3s ease;
  }

  .hero__search-btn:hover {
    background: rgba(0, 0, 0, 0.85);
  }

  .hero__info {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1.5rem;
  }

  @media (min-width: 768px) {
    .hero__info {
      justify-content: flex-end;
    }
  }

  .hero__info-item {
    text-align: left;
  }

  @media (min-width: 768px) {
    .hero__info-item {
      text-align: right;
    }
  }

  .hero__info-label {
    font-size: 0.5rem;
    font-family: 'Space Grotesk', monospace;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    color: rgba(0, 0, 0, 0.3);
    margin-bottom: 0.125rem;
  }

  .hero__info-value {
    font-size: 0.75rem;
    color: rgba(0, 0, 0, 0.6);
  }
{% endstyle %}

