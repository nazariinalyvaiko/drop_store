{%- comment -%}
  Image + Text - Split layout with image and content
{%- endcomment -%}

<section class="image-text" data-section-id="{{ section.id }}">
  <div class="container">
    <div class="image-text__grid {% if section.settings.image_position == 'right' %}image-text__grid--reverse{% endif %}">
      <!-- Image -->
      <div class="image-text__media">
        {%- if section.settings.image != blank -%}
          <img 
            src="{{ section.settings.image | image_url: width: 800 }}"
            alt="{{ section.settings.image.alt | escape }}"
            loading="lazy"
            width="800"
            height="600"
            class="image-text__image"
          >
        {%- else -%}
          <div class="image-text__placeholder"></div>
        {%- endif -%}
      </div>

      <!-- Content -->
      <div class="image-text__content">
        {%- if section.settings.label != blank -%}
          <span class="image-text__label">{{ section.settings.label }}</span>
        {%- endif -%}
        
        <h2 class="image-text__heading">{{ section.settings.heading }}</h2>
        
        {%- if section.settings.text != blank -%}
          <div class="image-text__text">{{ section.settings.text }}</div>
        {%- endif -%}
        
        {%- if section.settings.button_label != blank -%}
          <a href="{{ section.settings.button_link }}" class="image-text__btn">
            {{ section.settings.button_label }} â†’
          </a>
        {%- endif -%}
      </div>
    </div>
  </div>
</section>

{% style %}
  .image-text {
    padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px;
    background: {{ section.settings.bg_color }};
  }

  .image-text__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
    align-items: center;
  }

  @media (min-width: 768px) {
    .image-text__grid {
      grid-template-columns: 1fr 1fr;
      gap: 4rem;
    }
  }

  .image-text__grid--reverse .image-text__media {
    order: 2;
  }

  .image-text__media {
    position: relative;
    aspect-ratio: 4 / 3;
    overflow: hidden;
    background: #f3f4f6;
  }

  .image-text__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .image-text__placeholder {
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #e5e7eb, #d1d5db);
  }

  .image-text__content {
    padding: 1rem 0;
  }

  .image-text__label {
    display: inline-block;
    font-size: 0.625rem;
    font-family: 'Space Grotesk', monospace;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    color: rgba(0, 0, 0, 0.4);
    margin-bottom: 1rem;
  }

  .image-text__heading {
    font-size: 1.75rem;
    font-family: 'Space Grotesk', monospace;
    font-weight: 300;
    line-height: 1.2;
    margin-bottom: 1rem;
  }

  .image-text__text {
    font-size: 0.9375rem;
    color: rgba(0, 0, 0, 0.6);
    line-height: 1.7;
    margin-bottom: 1.5rem;
  }

  .image-text__btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.75rem;
    font-family: 'Space Grotesk', monospace;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: #000;
    text-decoration: none;
    padding-bottom: 0.25rem;
    border-bottom: 1px solid rgba(0, 0, 0, 0.2);
    transition: border-color 0.3s;
  }

  .image-text__btn:hover {
    border-color: #000;
  }
{% endstyle %}

{% schema %}
{
  "name": "Image + Text",
  "tag": "section",
  "class": "section-image-text",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "select",
      "id": "image_position",
      "label": "Image Position",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "right", "label": "Right" }
      ],
      "default": "left"
    },
    {
      "type": "text",
      "id": "label",
      "label": "Label",
      "default": "About"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Our Story"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Text",
      "default": "<p>Share your brand story with customers.</p>"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Learn More"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "header",
      "content": "Style"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding Top",
      "min": 0, "max": 100, "step": 10, "default": 60, "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding Bottom",
      "min": 0, "max": 100, "step": 10, "default": 60, "unit": "px"
    }
  ],
  "presets": [
    {
      "name": "Image + Text"
    }
  ]
}
{% endschema %}

