<section class="page-404" data-section-id="{{ section.id }}">
  <div class="container">
    <div class="page-404__wrapper">
      <div class="section-divider">
        <div class="section-divider__line section-divider__line--short"></div>
        <span class="section-divider__text">404</span>
        <div class="section-divider__line section-divider__line--long"></div>
      </div>

      <h1 class="page-404__title">{{ section.settings.heading | default: 'Page Not Found' }}</h1>
      <p class="page-404__text">{{ section.settings.text | default: 'The page you requested does not exist.' }}</p>
      
      <a href="{{ routes.root_url }}" class="page-404__btn btn btn-primary">
        {{ section.settings.button_label | default: 'Back to Home' }}
      </a>

      <div class="section-divider" style="margin-top: 3rem;">
        <div class="section-divider__line section-divider__line--long"></div>
        <span class="section-divider__text">â€¢</span>
        <div class="section-divider__line section-divider__line--short"></div>
      </div>
    </div>
  </div>
</section>

{% style %}
  .page-404 {
    padding: 6rem 0;
    text-align: center;
  }

  .page-404__wrapper {
    max-width: 32rem;
    margin: 0 auto;
  }

  .page-404__title {
    font-size: 2.5rem;
    font-family: 'Space Grotesk', monospace;
    font-weight: 300;
    letter-spacing: 0.05em;
    color: #000;
    margin: 2rem 0 1rem;
  }

  .page-404__text {
    font-size: 1rem;
    color: rgba(0, 0, 0, 0.5);
    font-weight: 300;
    margin-bottom: 2rem;
  }

  .page-404__btn {
    display: inline-flex;
    padding: 0.875rem 2rem;
    background: #000;
    color: #fff;
    text-decoration: none;
    font-size: 0.75rem;
    font-family: 'Space Grotesk', monospace;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    transition: background 0.3s ease;
  }

  .page-404__btn:hover {
    background: rgba(0, 0, 0, 0.85);
  }
{% endstyle %}

{% schema %}
{
  "name": "404 Page",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Page Not Found"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Text",
      "default": "The page you requested does not exist."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "Back to Home"
    }
  ]
}
{% endschema %}

