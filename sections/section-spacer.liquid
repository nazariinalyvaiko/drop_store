{%- comment -%}
  Spacer - Empty space between sections
{%- endcomment -%}

<div class="spacer" data-section-id="{{ section.id }}" style="height: {{ section.settings.height }}px; background: {{ section.settings.bg_color }};"></div>

{% schema %}
{
  "name": "Spacer",
  "tag": "section",
  "class": "section-spacer",
  "settings": [
    {
      "type": "range",
      "id": "height",
      "label": "Height",
      "min": 10,
      "max": 200,
      "step": 10,
      "default": 40,
      "unit": "px"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background",
      "default": "transparent"
    }
  ],
  "presets": [
    {
      "name": "Spacer"
    }
  ]
}
{% endschema %}

