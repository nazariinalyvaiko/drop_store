{%- comment -%}
  Split Content - Two-column layout with multiple content options
{%- endcomment -%}

<section class="split-content" data-section-id="{{ section.id }}" style="
  --split-bg: {{ section.settings.bg_color }};
  --split-text: {{ section.settings.text_color }};
  --split-muted: {{ section.settings.muted_color }};
  --split-accent: {{ section.settings.accent_color }};
">
  <div class="container">
    <div class="split-content__grid {% if section.settings.reverse %}split-content__grid--reverse{% endif %}">
      <!-- Media Side -->
      <div class="split-content__media">
        {%- if section.settings.video_url != blank -%}
          <div class="split-content__video">
            {%- assign video_url = section.settings.video_url -%}
            {%- if video_url contains 'youtube.com' or video_url contains 'youtu.be' -%}
              {%- assign video_id = video_url | split: 'v=' | last | split: '&' | first -%}
              {%- if video_url contains 'youtu.be' -%}
                {%- assign video_id = video_url | split: '/' | last | split: '?' | first -%}
              {%- endif -%}
              <iframe src="https://www.youtube.com/embed/{{ video_id }}" frameborder="0" allowfullscreen loading="lazy"></iframe>
            {%- elsif video_url contains 'vimeo.com' -%}
              {%- assign video_id = video_url | split: '/' | last -%}
              <iframe src="https://player.vimeo.com/video/{{ video_id }}" frameborder="0" allowfullscreen loading="lazy"></iframe>
            {%- endif -%}
          </div>
        {%- elsif section.settings.image != blank -%}
          <div class="split-content__image" style="border-radius: {{ section.settings.image_radius }}px;">
            <img 
              src="{{ section.settings.image | image_url: width: 800 }}"
              alt="{{ section.settings.image.alt | escape }}"
              loading="lazy"
              width="800"
              height="600"
            >
          </div>
        {%- else -%}
          <div class="split-content__placeholder" style="border-radius: {{ section.settings.image_radius }}px;"></div>
        {%- endif -%}
      </div>

      <!-- Content Side -->
      <div class="split-content__content" style="text-align: {{ section.settings.content_align }};">
        {%- if section.settings.label != blank -%}
          <span class="split-content__label">{{ section.settings.label }}</span>
        {%- endif -%}

        <h2 class="split-content__heading" style="font-size: {{ section.settings.heading_size }}rem; font-weight: {{ section.settings.heading_weight }};">
          {{ section.settings.heading }}
        </h2>

        {%- if section.settings.text != blank -%}
          <div class="split-content__text">{{ section.settings.text }}</div>
        {%- endif -%}

        <!-- Feature List -->
        {%- if section.blocks.size > 0 -%}
          <ul class="split-content__features">
            {%- for block in section.blocks -%}
              {%- if block.type == 'feature' -%}
                <li class="split-content__feature" {{ block.shopify_attributes }}>
                  <span class="split-content__feature-icon">
                    {%- if block.settings.icon != blank -%}
                      {{ block.settings.icon }}
                    {%- else -%}
                      ✓
                    {%- endif -%}
                  </span>
                  <span>{{ block.settings.text }}</span>
                </li>
              {%- endif -%}
            {%- endfor -%}
          </ul>
        {%- endif -%}

        {%- if section.settings.button_label != blank -%}
          <a href="{{ section.settings.button_link }}" class="split-content__btn {% if section.settings.button_style == 'outline' %}split-content__btn--outline{% endif %}">
            {{ section.settings.button_label }}
            {%- if section.settings.button_arrow -%}
              <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M5 12h14m-7-7 7 7-7 7"/></svg>
            {%- endif -%}
          </a>
        {%- endif -%}
      </div>
    </div>
  </div>
</section>

{% style %}
  .split-content {
    padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px;
    background: var(--split-bg);
    color: var(--split-text);
  }

  .split-content__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2.5rem;
    align-items: center;
  }

  @media (min-width: 768px) {
    .split-content__grid {
      grid-template-columns: {{ section.settings.media_width }}fr {{ section.settings.content_width }}fr;
      gap: {{ section.settings.gap }}rem;
    }

    .split-content__grid--reverse {
      grid-template-columns: {{ section.settings.content_width }}fr {{ section.settings.media_width }}fr;
    }

    .split-content__grid--reverse .split-content__media {
      order: 2;
    }
  }

  .split-content__video {
    position: relative;
    padding-bottom: 56.25%;
    height: 0;
    overflow: hidden;
    background: #000;
    border-radius: {{ section.settings.image_radius }}px;
  }

  .split-content__video iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  .split-content__image {
    overflow: hidden;
  }

  .split-content__image img {
    width: 100%;
    height: auto;
    object-fit: cover;
    {%- if section.settings.image_aspect != 'auto' -%}
    aspect-ratio: {{ section.settings.image_aspect }};
    {%- endif -%}
    transition: transform 0.5s ease;
  }

  .split-content__image:hover img {
    transform: scale(1.03);
  }

  .split-content__placeholder {
    aspect-ratio: 4/3;
    background: rgba(128, 128, 128, 0.1);
  }

  .split-content__content {
    padding: 1rem 0;
  }

  .split-content__label {
    display: inline-block;
    font-size: 0.625rem;
    font-family: 'Space Grotesk', monospace;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    color: var(--split-accent);
    margin-bottom: 1rem;
  }

  .split-content__heading {
    font-family: 'Space Grotesk', monospace;
    line-height: 1.2;
    margin-bottom: 1rem;
  }

  .split-content__text {
    font-size: 0.9375rem;
    color: var(--split-muted);
    line-height: 1.7;
    margin-bottom: 1.5rem;
  }

  .split-content__text p {
    margin-bottom: 1rem;
  }

  .split-content__text p:last-child {
    margin-bottom: 0;
  }

  .split-content__features {
    list-style: none;
    padding: 0;
    margin: 0 0 1.5rem 0;
  }

  .split-content__feature {
    display: flex;
    align-items: flex-start;
    gap: 0.75rem;
    margin-bottom: 0.75rem;
    font-size: 0.9375rem;
    color: var(--split-text);
  }

  .split-content__feature-icon {
    flex-shrink: 0;
    width: 1.25rem;
    height: 1.25rem;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--split-accent);
  }

  .split-content__btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    font-size: 0.75rem;
    font-family: 'Space Grotesk', monospace;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    text-decoration: none;
    background: var(--split-accent);
    color: #fff;
    border: 2px solid var(--split-accent);
    border-radius: {{ section.settings.button_radius }}px;
    transition: all 0.3s ease;
  }

  .split-content__btn:hover {
    background: transparent;
    color: var(--split-accent);
  }

  .split-content__btn--outline {
    background: transparent;
    color: var(--split-accent);
  }

  .split-content__btn--outline:hover {
    background: var(--split-accent);
    color: #fff;
  }
{% endstyle %}

