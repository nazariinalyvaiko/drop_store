{%- comment -%}
  Banner - Full-width promotional banner
{%- endcomment -%}

<section class="banner" data-section-id="{{ section.id }}" style="background-color: {{ section.settings.bg_color }};">
  {%- if section.settings.image != blank -%}
    <div class="banner__bg">
      <img 
        src="{{ section.settings.image | image_url: width: 1920 }}"
        alt="{{ section.settings.image.alt | escape }}"
        loading="lazy"
        class="banner__bg-image"
        width="1920"
        height="600"
      >
      <div class="banner__overlay" style="opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};"></div>
    </div>
  {%- endif -%}

  <div class="container">
    <div class="banner__content banner__content--{{ section.settings.text_align }}">
      {%- if section.settings.heading != blank -%}
        <h2 class="banner__heading" style="color: {{ section.settings.text_color }};">
          {{ section.settings.heading }}
        </h2>
      {%- endif -%}
      
      {%- if section.settings.text != blank -%}
        <p class="banner__text" style="color: {{ section.settings.text_color }};">
          {{ section.settings.text }}
        </p>
      {%- endif -%}
      
      {%- if section.settings.button_label != blank -%}
        <a href="{{ section.settings.button_link }}" class="banner__btn">
          {{ section.settings.button_label }}
        </a>
      {%- endif -%}
    </div>
  </div>
</section>

{% style %}
  .banner {
    position: relative;
    padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px;
    overflow: hidden;
  }

  .banner__bg {
    position: absolute;
    inset: 0;
  }

  .banner__bg-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .banner__overlay {
    position: absolute;
    inset: 0;
    background: #000;
  }

  .banner__content {
    position: relative;
    z-index: 10;
    max-width: 40rem;
  }

  .banner__content--center {
    margin: 0 auto;
    text-align: center;
  }

  .banner__content--left {
    text-align: left;
  }

  .banner__heading {
    font-size: clamp(1.5rem, 4vw, 2.5rem);
    font-family: 'Space Grotesk', monospace;
    font-weight: 300;
    line-height: 1.2;
    margin-bottom: 1rem;
  }

  .banner__text {
    font-size: 1rem;
    line-height: 1.7;
    opacity: 0.9;
    margin-bottom: 1.5rem;
  }

  .banner__btn {
    display: inline-block;
    padding: 0.875rem 2rem;
    background: #fff;
    color: #000;
    font-size: 0.75rem;
    font-family: 'Space Grotesk', monospace;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    text-decoration: none;
    transition: all 0.3s;
  }

  .banner__btn:hover {
    background: #000;
    color: #fff;
  }
{% endstyle %}

{% schema %}
{
  "name": "Banner",
  "tag": "section",
  "class": "section-banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Special Offer"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Text",
      "default": "Get 20% off your first order."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "header",
      "content": "Style"
    },
    {
      "type": "select",
      "id": "text_align",
      "label": "Text Alignment",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" }
      ],
      "default": "center"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "label": "Overlay Opacity",
      "min": 0, "max": 100, "step": 10, "default": 50, "unit": "%"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding Top",
      "min": 20, "max": 150, "step": 10, "default": 80, "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding Bottom",
      "min": 20, "max": 150, "step": 10, "default": 80, "unit": "px"
    }
  ],
  "presets": [
    {
      "name": "Banner"
    }
  ]
}
{% endschema %}

