    font-weight: 600;
    border: none;
    border-radius: {{ block.settings.button_radius }}px;
    cursor: pointer;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .ai-price-filter__button--primary-{{ ai_gen_id }} {
