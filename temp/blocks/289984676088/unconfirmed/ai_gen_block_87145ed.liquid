  }
{% endstyle %}

<price-filter-{{ ai_gen_id }} class="ai-price-filter-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-price-filter__header-{{ ai_gen_id }}">
    {% if block.settings.title != blank %}
      <h3 class="ai-price-filter__title-{{ ai_gen_id }}">{{ block.settings.title }}</h3>
    {% endif %}
    {% if block.settings.subtitle != blank %}
      <p class="ai-price-filter__subtitle-{{ ai_gen_id }}">{{ block.settings.subtitle }}</p>
    {% endif %}
  </div>

  <div class="ai-price-filter__display-{{ ai_gen_id }}">
    <div class="ai-price-filter__price-box-{{ ai_gen_id }}">
      <div class="ai-price-filter__price-label-{{ ai_gen_id }}">{{ block.settings.min_label }}</div>
      <div class="ai-price-filter__price-value-{{ ai_gen_id }}" data-min-display>
        {{ block.settings.currency_symbol }}{{ block.settings.min_price }}
      </div>
    </div>
    <span class="ai-price-filter__separator-{{ ai_gen_id }}">—</span>
    <div class="ai-price-filter__price-box-{{ ai_gen_id }}">
      <div class="ai-price-filter__price-label-{{ ai_gen_id }}">{{ block.settings.max_label }}</div>
      <div class="ai-price-filter__price-value-{{ ai_gen_id }}" data-max-display>
        {{ block.settings.currency_symbol }}{{ block.settings.max_price }}
      </div>
    </div>
  </div>

  <div class="ai-price-filter__slider-container-{{ ai_gen_id }}">
    <div class="ai-price-filter__track-{{ ai_gen_id }}">
      <div class="ai-price-filter__range-{{ ai_gen_id }}" data-range></div>
    </div>
    <div class="ai-price-filter__inputs-{{ ai_gen_id }}">
      <input
        type="range"
        class="ai-price-filter__input-{{ ai_gen_id }}"
        data-min-input
        min="{{ block.settings.min_price }}"
        max="{{ block.settings.max_price }}"
        value="{{ block.settings.min_price }}"
        step="{{ block.settings.step }}"
        aria-label="Minimum price"
      >
      <input
        type="range"
        class="ai-price-filter__input-{{ ai_gen_id }}"
        data-max-input
        min="{{ block.settings.min_price }}"
        max="{{ block.settings.max_price }}"
        value="{{ block.settings.max_price }}"
        step="{{ block.settings.step }}"
        aria-label="Maximum price"
      >
    </div>
  </div>

  <div class="ai-price-filter__actions-{{ ai_gen_id }}">
    <button
      type="button"
      class="ai-price-filter__button-{{ ai_gen_id }} ai-price-filter__button--primary-{{ ai_gen_id }}"
      data-apply
    >
      {{ block.settings.apply_button_text }}
    </button>
    <button
      type="button"
      class="ai-price-filter__button-{{ ai_gen_id }} ai-price-filter__button--secondary-{{ ai_gen_id }}"
      data-reset
    >
      {{ block.settings.reset_button_text }}
    </button>
  </div>
</price-filter-{{ ai_gen_id }}>

<script>
  (function() {
    class PriceFilter{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.minInput = this.querySelector('[data-min-input]');
        this.maxInput = this.querySelector('[data-max-input]');
        this.minDisplay = this.querySelector('[data-min-display]');
        this.maxDisplay = this.querySelector('[data-max-display]');
        this.range = this.querySelector('[data-range]');
        this.applyButton = this.querySelector('[data-apply]');
        this.resetButton = this.querySelector('[data-reset]');
        
        this.minPrice = parseInt(this.minInput.min);
        this.maxPrice = parseInt(this.minInput.max);
        this.currencySymbol = '{{ block.settings.currency_symbol }}';
      }

      connectedCallback() {
        this.minInput.addEventListener('input', () => this.handleMinChange());
        this.maxInput.addEventListener('input', () => this.handleMaxChange());
        this.applyButton.addEventListener('click', () => this.applyFilter());
        this.resetButton.addEventListener('click', () => this.resetFilter());
        
        this.updateRange();
      }

      handleMinChange() {
        const minVal = parseInt(this.minInput.value);
        const maxVal = parseInt(this.maxInput.value);
        
        if (minVal >= maxVal) {
          this.minInput.value = maxVal - {{ block.settings.step }};
        }
        
        this.updateDisplay();
        this.updateRange();
      }

      handleMaxChange() {
        const minVal = parseInt(this.minInput.value);
        const maxVal = parseInt(this.maxInput.value);
        
        if (maxVal <= minVal) {
          this.maxInput.value = minVal + {{ block.settings.step }};
        }
        
        this.updateDisplay();
        this.updateRange();
      }

      updateDisplay() {
        const minVal = parseInt(this.minInput.value);
        const maxVal = parseInt(this.maxInput.value);
        
        this.minDisplay.textContent = this.currencySymbol + minVal.toLocaleString();
        this.maxDisplay.textContent = this.currencySymbol + maxVal.toLocaleString();
      }

      updateRange() {
        const minVal = parseInt(this.minInput.value);
        const maxVal = parseInt(this.maxInput.value);
        const range = this.maxPrice - this.minPrice;
        
        const leftPercent = ((minVal - this.minPrice) / range) * 100;
        const rightPercent = ((this.maxPrice - maxVal) / range) * 100;
        
        this.range.style.left = leftPercent + '%';
        this.range.style.right = rightPercent + '%';
      }

      applyFilter() {
        const minVal = parseInt(this.minInput.value);
        const maxVal = parseInt(this.maxInput.value);
        
        const url = new URL(window.location.href);
        url.searchParams.set('filter.v.price.gte', minVal);
        url.searchParams.set('filter.v.price.lte', maxVal);
        
        window.location.href = url.toString();
      }

      resetFilter() {
        this.minInput.value = this.minPrice;
        this.maxInput.value = this.maxPrice;
        
        this.updateDisplay();
        this.updateRange();
        
        const url = new URL(window.location.href);
        url.searchParams.delete('filter.v.price.gte');
        url.searchParams.delete('filter.v.price.lte');
        
        window.location.href = url.toString();
      }
    }

    customElements.define('price-filter-{{ ai_gen_id }}', PriceFilter{{ ai_gen_id }});
  })();
</script>

