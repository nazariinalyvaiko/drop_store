[
  {
    "name": "theme_info",
    "theme_name": "VAIKO Store",
    "theme_version": "1.0.0",
    "theme_author": "VAIKO",
    "theme_documentation_url": "https://vaiko.store/help",
    "theme_support_url": "https://vaiko.store/support"
  },
  {
    "name": "Colors",
    "settings": [
      {
        "type": "header",
        "content": "Primary colors"
      },
      {
        "type": "color",
        "id": "colors_text",
        "label": "Text",
        "default": "#000000"
      },
      {
        "type": "color",
        "id": "colors_background_1",
        "label": "Background",
        "default": "#FFFFFF"
      },
      {
        "type": "color",
        "id": "colors_background_2",
        "label": "Background 2",
        "default": "#F5F5F5"
      },
      {
        "type": "header",
        "content": "Accent colors"
      },
      {
        "type": "color",
        "id": "colors_accent_1",
        "label": "Accent 1",
        "default": "#000000"
      },
      {
        "type": "color",
        "id": "colors_accent_2",
        "label": "Accent 2",
        "default": "#F97316"
      },
      {
        "type": "header",
        "content": "Button colors"
      },
      {
        "type": "color",
        "id": "colors_solid_button_labels",
        "label": "Solid button text",
        "default": "#FFFFFF"
      },
      {
        "type": "color",
        "id": "colors_outline_button_labels",
        "label": "Outline button text",
        "default": "#000000"
      }
    ]
  },
  {
    "name": "Typography",
    "settings": [
      {
        "type": "header",
        "content": "Headings"
      },
      {
        "type": "font_picker",
        "id": "type_header_font",
        "default": "space_grotesk_n4",
        "label": "Font"
      },
      {
        "type": "range",
        "id": "heading_scale",
        "min": 75,
        "max": 150,
        "step": 5,
        "unit": "%",
        "label": "Font size scale",
        "default": 100
      },
      {
        "type": "header",
        "content": "Body"
      },
      {
        "type": "font_picker",
        "id": "type_body_font",
        "default": "inter_n4",
        "label": "Font"
      },
      {
        "type": "range",
        "id": "body_scale",
        "min": 75,
        "max": 150,
        "step": 5,
        "unit": "%",
        "label": "Font size scale",
        "default": 100
      }
    ]
  },
  {
    "name": "Layout",
    "settings": [
      {
        "type": "header",
        "content": "Global Scale"
      },
      {
        "type": "range",
        "id": "global_scale",
        "min": 100,
        "max": 200,
        "step": 10,
        "default": 150,
        "unit": "%",
        "label": "Global scale",
        "info": "Scales all elements. 100% = default, 150% = 50% larger"
      },
      {
        "type": "header",
        "content": "Page Width"
      },
      {
        "type": "range",
        "id": "page_width",
        "min": 1200,
        "max": 2000,
        "step": 100,
        "default": 1600,
        "unit": "px",
        "label": "Page width"
      },
      {
        "type": "header",
        "content": "Spacing"
      },
      {
        "type": "range",
        "id": "section_spacing",
        "min": 20,
        "max": 100,
        "step": 10,
        "default": 60,
        "unit": "px",
        "label": "Section spacing"
      }
    ]
  },
  {
    "name": "Cart",
    "settings": [
      {
        "type": "select",
        "id": "cart_type",
        "options": [
          {
            "value": "drawer",
            "label": "Drawer"
          },
          {
            "value": "page",
            "label": "Page"
          }
        ],
        "default": "drawer",
        "label": "Cart type"
      }
    ]
  },
  {
    "name": "Search",
    "settings": [
      {
        "type": "checkbox",
        "id": "predictive_search_enabled",
        "default": true,
        "label": "Enable predictive search"
      },
      {
        "type": "checkbox",
        "id": "predictive_search_show_vendor",
        "default": false,
        "label": "Show product vendor"
      },
      {
        "type": "checkbox",
        "id": "predictive_search_show_price",
        "default": true,
        "label": "Show product price"
      }
    ]
  },
  {
    "name": "Favicon",
    "settings": [
      {
        "type": "image_picker",
        "id": "favicon",
        "label": "Favicon image",
        "info": "32 x 32px .png recommended"
      }
    ]
  },
  {
    "name": "Social media",
    "settings": [
      {
        "type": "header",
        "content": "Social accounts"
      },
      {
        "type": "text",
        "id": "social_twitter_link",
        "label": "Twitter",
